<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 background_opaque="true"
 background_visible="true"
 bg_opaque_color="MouseGray"
 follows="left|bottom|right"
 focus_root="true" 
 height="34"
 layout="topleft"
 name="navigation_bar"
 chrome="true"
 width="800">

<panel
 background_visible="false"
 follows="left|top|right"
 height="25"
 layout="topleft"
 top="8"
 left="0"
 name="navigation_panel"
 width="800">

 <!-- Layout stack for buttons, location input and search field -->
 <layout_stack
   follows="all"
   height="25"
   layout="topleft"
   border_size="0"
   resize_bar_overlap="5"
   left="0"
   top="0"
   mouse_opaque="false"
   name="nvp_stack"
   orientation="horizontal"
   width="800">
	 <!-- Contains the navigation buttons -->
	 <layout_panel
	   follows="top|left"
	   layout="topleft"
	   name="navigation_buttons_layout_panel"
	   auto_resize="false"
	   width="110">
	    <pull_button
	     follows="left|top"
	     direction="down"
	     height="23"
	     image_overlay="Arrow_Left_Off"
	     image_bottom_pad="1"
	     layout="topleft"
	     left="8"
	     name="back_btn"
	     tool_tip="Go back to previous location"
	     top="0"
	     width="31" />
	    <pull_button
	     follows="left|top"
	     direction="down"
	     height="23"
	     image_overlay="Arrow_Right_Off"
	     image_bottom_pad="1"
	     layout="topleft"
	     left_pad="0"
	     name="forward_btn"
	     tool_tip="Go forward one location"
	     top_delta="0"
	     width="31" />
	    <button
	     follows="left|top"
	     height="23"
	     image_bottom_pad="1"
	     image_overlay="Home_Off"
	     layout="topleft"
	     left_pad="8"
	     name="home_btn"
	     tool_tip="Teleport to my home location"
	     top_delta="0"
	     width="32" />
	 </layout_panel>
	 <!-- Contains the navigation buttons -->

	<!-- Layout panel for location input and search field stack -->
	<layout_panel
	 follows="left|top|right"
	 layout="topleft"
	 name="location_search_layout_panel"
	 min_width="375"
	 width="375"
	 auto_resize="true"
	 user_resize="true"
	 height="22">

	<!-- Layout stack for location input and search field -->
	<layout_stack
	 follows="left|top|right"
	 layout="topleft"
	 orientation="horizontal"
	 name="location_search_layout_stack"
	 width="375"
	 height="22"
	 left="0"
	 top="0">

	 <!-- Contains the location bar -->
	 <layout_panel
	   follows="top|left"
	   layout="topleft"
	   auto_resize="true"
	   name="location_bar_layout_panel"
	   min_width="200"
	   width="223">
	    <location_input
         follows="top|left|right"
	     halign="right"
	     height="23"
	     label="Location"
	     layout="topleft"
	     left="8"
	     max_chars="254"
	     mouse_opaque="false"
	     name="location_combo"
	     top="0"
         width="215">
         <combo_list
          mouse_wheel_opaque="true"/>
	    </location_input>
	</layout_panel>
	<!-- Contains the location bar -->

	<!-- Contains the search bar, can be hidden by code -->
	<layout_panel
	 name="search_bar_visibility_panel"
	 layout="topleft"
	 min_width="152"
	 width="152"
	 height="22"
	 visibility_control="ShowSearchTopBar"
	 auto_resize="false"
	 user_resize="false">
        <search_combo_box
	     follows="all"
	     left="8"
	     halign="right"
	     height="23"
	     label="Search"
	     layout="topleft"
	     mouse_opaque="false"
	     name="search_combo_box"
	     tool_tip="Search"
	     top="0"
	     width="140" >
         <combo_editor
          label="Search MetaVerse"
          name="search_combo_editor"/>
         <combo_list
          draw_border="true"
          border.highlight_light_color="FocusColor"
          border.highlight_dark_color="FocusColor"
          border.shadow_light_color="FocusColor"
          border.shadow_dark_color="FocusColor"
          mouse_wheel_opaque="true" />
        </search_combo_box>
	</layout_panel>
	<!-- Contains the search bar, can be hidden by code -->

	</layout_stack>
	<!-- Layout stack for location input and search field -->

	</layout_panel>
	<!-- Layout panel for location input and search field stack -->

         <layout_panel
           follows="top|left"
           layout="topleft"
           auto_resize="false"
           user_resize="true"
           min_width="311"
           name="favorites_layout_panel"
           width="311">
        <icon
		 follows="top|left"
		 height="25"
		 image_name="ChatBarHandle"
		 layout="topleft"
		 left="0"
		 name="resize_handle"
		 top="2"
		 width="5" />
           <favorites_bar
             follows="left|right|top"
             font="SansSerifSmall"
             height="20"
             layout="topleft"
             left_pad="3"
             top="0"
             name="favorite"
             image_drag_indication="Accordion_ArrowOpened_Off"
             tool_tip="Drag Landmarks here for quick access to your favorite places in Second Life!"
             width="300">
              <!-- More button actually is a text box. -->
              <more_button
                follows="left|bottom"
                name=">>"
                tab_stop="false"
                tool_tip="Show more of My Favorites"
                top="13"
                width="50"
                bottom="0"
                valign="bottom">
                More &#9660;
                </more_button>
         </favorites_bar>
         </layout_panel>
     
     </layout_stack>
     <!-- Layout stack for buttons, location input and search field -->
</panel>
</panel>
