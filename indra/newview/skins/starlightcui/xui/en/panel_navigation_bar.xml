<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 background_opaque="false"
 background_visible="true"
 follows="left|bottom|right"
 focus_root="true" 
 height="34"
 layout="topleft"
 name="navigation_bar"
 chrome="true"
 width="800">
 <layout_stack
   follows="all"
   height="25"
   layout="topleft"
   border_size="0"
   resize_bar_overlap="3"
   left="0"
   top="3"
   mouse_opaque="false"
   name="nvp_stack"
   orientation="horizontal"
   width="800">
	 <layout_panel
	   follows="top|left"
	   layout="topleft"
	   auto_resize="true"
	   user_resize="true"
	   min_width="480"
	   name="navigation_layout_panel"
	   width="480">
	<panel
	 background_visible="false"
	 follows="left|top|right"
	 height="25"
	 layout="topleft"
	 top_delta="0"
	 top_pad="0"
     left="0"
	 name="navigation_panel"
     width="480">
	    <pull_button
	     follows="left|top"
	     direction="down"
	     height="23"
	     image_overlay="Arrow_Left_Off"
	     image_bottom_pad="1"
	     layout="topleft"
	     left="8"
	     name="back_btn"
	     tool_tip="Go back to previous location"
	     top="2"
	     width="31" />
	    <pull_button
	     follows="left|top"
	     direction="down"
	     height="23"
	     image_overlay="Arrow_Right_Off"
	     image_bottom_pad="1"
	     layout="topleft"
	     left_pad="0"
	     name="forward_btn"
	     tool_tip="Go forward one location"
	     top_delta="0"
	     width="31" />
	    <button
	     follows="left|top"
	     height="23"
	     image_bottom_pad="1"
	     image_overlay="Home_Off"
	     layout="topleft"
	     left_pad="8"
	     name="home_btn"
	     tool_tip="Teleport to my home location"
	     top_delta="0"
	     width="32" />
	    <location_input
         follows="top|left|right"
	     halign="right"
	     height="23"
	     label="Location"
	     layout="topleft"
	     left_pad="8"
	     max_chars="254"
	     mouse_opaque="false"
	     name="location_combo"
	     top_delta="0"
         width="203">
         <combo_list
          mouse_wheel_opaque="true"/>
	    </location_input>
		
        <search_combo_box
	     follows="top|right"
	     left_pad="8"
	     halign="right"
	     height="23"
	     label="Search"
	     layout="topleft"
	     mouse_opaque="false"
	     name="search_combo_box"
	     tool_tip="Search"
	     top_delta="0"
	     width="144" >
         <combo_editor
          label="Search MetaVerse"
          name="search_combo_editor"/>
         <combo_list
          draw_border="true"
          border.highlight_light_color="FocusColor"
          border.highlight_dark_color="FocusColor"
          border.shadow_light_color="FocusColor"
          border.shadow_dark_color="FocusColor"
          mouse_wheel_opaque="true" />
        </search_combo_box>
        <icon
		 follows="top|right"
		 height="25"
		 image_name="ChatBarHandle"
		 layout="topleft"
		 left="-3"
		 name="resize_handle"
		 top="2"
		 width="5" />
       </panel>
        </layout_panel>
         <layout_panel
           follows="top|left"
           layout="topleft"
           auto_resize="true"
           user_resize="true"
           min_width="315"
           name="favorites_layout_panel"
           width="315">
           <favorites_bar
             follows="left|right|top"
             font="SansSerifSmall"
             height="20"
             layout="topleft"
             left="0"
             top_pad="5"
             name="favorite"
             image_drag_indication="Accordion_ArrowOpened_Off"
             tool_tip="Drag Landmarks here for quick access to your favorite places in Second Life!"
             width="311">
              <!-- More button actually is a text box. -->
              <more_button
                follows="left|bottom"
                name=">>"
                tab_stop="false"
                tool_tip="Show more of My Favorites"
                top="13"
                width="50"
                bottom="0"
                valign="bottom">
                More &#9660;
                </more_button>
         </favorites_bar>
         </layout_panel>
     
     </layout_stack>
</panel>
