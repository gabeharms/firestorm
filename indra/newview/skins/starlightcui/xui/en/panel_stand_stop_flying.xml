<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<!-- Width and height of this panel is adapted in code to fit the parent panel -->
<panel
 follows="all"
 height="21"
 layout="topleft"
 name="panel_stand_stop_flying"
 mouse_opaque="false"
 visible="true"
 width="210">
    <button
     follows="left|bottom"
     height="19"
	 image_unselected="PushButton_Selected"
     label="Stand"
     layout="topleft"
     left="10"
     name="stand_btn"
     tool_tip="Click here to stand up"
     top="2"
     visible="true"
     width="93" />
    <button
     follows="left|bottom"
     height="19"
	 image_unselected="PushButton_Selected"
     label="Stop Flying"
     layout="topleft"
     left="10"
     name="stop_fly_btn"
     tool_tip="Click here to stop flying"
     top="2"
     visible="false"
     width="93" />
	<button
     follows="right|bottom"
     height="19"
	 image_unselected="PushButton_Selected"
     label="Flycam"
     layout="topleft"
     right="-10"
     name="flycam_btn"
     tool_tip="Stop Flycam Mode"
     top="2"
     visible="true"
     width="93">
        <commit_callback
         function="View.JoystickFlycam" />
    </button>
</panel>
