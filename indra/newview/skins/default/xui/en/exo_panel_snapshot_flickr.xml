    <tab_container
     follows="all"
     height="376"
     layout="topleft"
     left="1"
     name="flickr_panel_container"
     default_panel_name="panel_flickr_metadata"
     top="5"
     width="490">
      <panel
       follows="all"
       layout="topleft"
       label="Metadata"
       name="panel_flickr_metadata"
       width="490"
       height="380">
        <text
         type="string"
         length="1"
         bottom="35"
         follows="top|left"
         font="SansSerif"
         height="16"
         layout="topleft"
         left="12"
         name="title_label"
         top="10"
         width="45">
            Title:
        </text>
        <line_editor
         follows="left|top|right"
         height="20"
         layout="topleft"
         left_pad="5"
         name="title_form"
         right="-10"
         top_delta="-4"
         value="Snapshot" />
        <text
         type="string"
         length="1"
         bottom_delta="23"
         follows="top|left"
         font="SansSerif"
         height="16"
         layout="topleft"
         left="12"
         name="tags_label"
         width="45">
            Tags:
        </text>
        <line_editor
         control_name="ExodusFlickrLastTags"
         follows="left|top|right"
         height="20"
         layout="topleft"
         left_pad="5"
         max_length_bytes="100"
         name="tags_form"
         right="-10"
         top_delta="-4" />
        <text
         type="string"
         length="1"
         bottom_delta="23"
         follows="top|left"
         font="SansSerif"
         height="16"
         layout="topleft"
         left="12"
         name="rating_label"
         width="45">
            Rating:
        </text>
        <icons_combo_box
         follows="left|top|right"
         height="20"
         layout="topleft"
         left_pad="5"
         right="-90"
         top_delta="-4"
         label="Moderate"
         name="rating_combo">
            <icons_combo_box.drop_down_button
             image_overlay="Parcel_M_Light"
             image_overlay_alignment="left"
             imgoverlay_label_space="3"
             pad_left="3"/>
            <icons_combo_box.item
             label="General"
             name="Safe"
             value="1">
                <item.columns
                 halign="center"
                 type="icon"
                 value="Parcel_PG_Light"
                 width="20"/>
            </icons_combo_box.item>
            <icons_combo_box.item
             label="Moderate"
             name="Moderate"
             value="2">
                <item.columns
                 halign="center"
                 type="icon"
                 value="Parcel_M_Light"
                 width="20"/>
            </icons_combo_box.item>
            <icons_combo_box.item
             label="Adult"
             name="Restricted"
             value="3">
                <item.columns
                 halign="center"
                 type="icon"
                 value="Parcel_R_Light"
                 width="20"/>
              </icons_combo_box.item>
        </icons_combo_box>
        <check_box
         control_name="ExodusFlickrShowPosition"
         follows="top|right"
         height="16"
         layout="topleft"
         right="-5"
         top_delta="4"
         name="location_check"
         label="Include loc"
         width="80"/>
         <!-- bottom_delta="23" -->
        <text
         type="string"
         length="1"
         bottom_delta="15"
         follows="top|left|right"
         font="SansSerif"
         layout="topleft"
         left="12"
         name="description_label"
         right="-10">
            Description (optional):
        </text>
        <text_editor
         type="string"
         length="1"
         follows="left|top|right"
         height="30"
         layout="topleft"
         left_delta="0"
         max_length="700"
         name="description_form"
         right="-10"
         top_pad="10"
         word_wrap="true" />
        <!-- <FS:TS> We don't use a cancel button on any other panel. -->
        <!--
        <button
         follows="right|bottom"
         height="23"
         label="Cancel"
         layout="topleft"
         name="cancel_btn"
         right="-32"
         top="350"
         width="100">
          <button.commit_callback
           function="Flickr.Cancel" />
        </button>
        -->
        <!-- </FS:TS> -->
        <button
         follows="right|bottom"
         height="23"
         label="Upload"
         layout="topleft"
         right="-10"
         name="upload_btn"
         bottom="-1"
         width="100">
          <button.commit_callback
           function="Flickr.Upload" />
        </button>
      </panel>
      <panel
       follows="all"
       layout="topleft"
       label="Settings"
       name="exo_panel_flickr_settings"
       filename="exo_panel_flickr_settings.xml" />
    </tab_container>
</panel>
