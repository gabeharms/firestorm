<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
    <panel width="380" 
           height="54" 
           left="0" 
           bottom="-1" 
           follows="left|right|bottom" 
           tab_group="1">
<layout_stack
 animate="false"
 follows="left|right"
 height="46"
 layout="topleft"
 left="5"
 name="nearby_chat_bar_panels"
 orientation="horizontal"
 width="370"
        spellcheck="true"
 >
  <layout_panel
   auto_resize="true"
   follows="left|right"
   height="46"
   name="panel_nearby_chat_bar"
   user_resize="false"
   visible="true"
   width="348"
   >
    <text_editor
     commit_on_return="true"
     follows="left|right"
     height="46"
     label="Press Enter to say, Ctrl+Enter to shout"
     layout="topleft"
     max_length="3000"
     name="chat_editor"
     top="0"
     use_ellipses="false"
     width="348"
     word_wrap="true" />
  </layout_panel>
  <layout_panel
   auto_resize="false"
   follows="left|right"
   height="46"
   name="panel_nearby_chat_toggle"
   user_resize="false"
   visible="true"
   width="22"
   >
      <button
        follows="right"
        is_toggle="true"
        width="20"
        top="0"
        layout="topleft"
        left="2"
        image_disabled="ComboButton_UpOff"
        image_unselected="ComboButton_UpOff"
        image_selected="ComboButton_On"
        image_pressed="ComboButton_UpSelected"
        image_pressed_selected="ComboButton_Selected"
        height="23"
        chrome="true"
        name="show_nearby_chat"
        tool_tip="Shows/hides nearby chat log">
      </button>
  </layout_panel>
</layout_stack>
</panel>
