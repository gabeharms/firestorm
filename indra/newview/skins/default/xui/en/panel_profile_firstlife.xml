<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 follows="all"
 height="480"
 label="Profile"
 layout="topleft"
 left="0"
 name="panel_profile_firstlife"
 top="0"
 width="430">
          <panel
           layout="topleft"
           follows="left|top|right|bottom"
           height="480"
           name="first_life_panel"
           top="0"
           left="0"
           width="430">
		   
              <texture_picker
               allow_no_texture="true"
               default_image_name="None"
               enabled="false"
               fallback_image="Generic_Person_Large"
               follows="top|left"
               height="225"
               layout="topleft"
               left="10"
               name="real_world_pic"
               top="10"
               width="275" />

			<view_border
			 left="5"
			 top_pad="-3"
			 bevel_style="in"
			 follows="left|top"
			 name="info_border"
			 height="139"
			 width="326" />
			<text_editor
			 left="5"
			 top_delta="1"
			 height="137"
			 width="324"
			 enabled="false"
			 follows="left|top"
			 layout="topleft"
			 max_length="512"
			 name="fl_description_edit"
			 word_wrap="true"
			 parse_urls="true" />

            <text
             follows="left|top"
             font.style="BOLD"
             height="13"
             layout="topleft"
             left="4"
             name="homepage_text"
             text_color="White"
             top_pad="20"
             value="Web page:"
             width="280" />
            <text
              follows="left|top"
              height="15"
              layout="topleft"
              left="4"
              name="homepage_edit"
              top_pad="2"
              translate="false"
              value="blank"
              width="280"
              word_wrap="false"
              use_ellipses="true" />
          </panel>
        </scroll_container>
      </accordion_tab>
    </accordion>
</panel>

