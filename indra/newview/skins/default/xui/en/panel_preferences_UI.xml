    <panel
     top_pad="5"
     bottom="-1"
     left="1"
     right="-1"
     follows="all"
     label="Buttons"
     name="UI-buttons-tab" >
        <text
         name="buttons_text1"
         top_pad="15"
         left="40"
         height="12"
         width="130"
         layout="topleft"
         follows="left|top"
         length="1">
