<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="all"
 height="440"
 layout="topleft"
 left="1"
 top="1"
 width="540"
 label="UI-Pref"
 name="Display panel">
<tab_container
 label="Firestorm Prefs"
 layout="topleft"
 follows="all"
 top="5"
 bottom="-10"
 left="1"
 right="-1"
 name="tabs"
 tab_min_width="50"
 tab_position="top" >

    <!--General-->
    <panel
     top_pad="5"
     bottom="-1"
     left="1"
     right="-1"
     follows="all"
     label="General"
     name="UI Prefs Panel" >

        <text
         type="string"
         length="1"
         follows="left|top"
         height="12"
         layout="topleft"
         left="10"
         name="UI Size:"
         top_pad="8"
         width="200">
            UI Scaling (may cause side effects):
        </text>
        <slider
         control_name="UIScaleFactor"
         decimal_digits="2"
         follows="left|top"
         height="17"
         increment="0.025"
         initial_value="1"
         layout="topleft"
         left_pad="0"
         max_val="1.4"
         min_val="0.75"
         name="ui_scale_slider"
         top_pad="-14"
         width="250" />

        <text
         type="string"
         left="10"
         top_pad="5"
         length="1"
         follows="left|top"
         height="12"
         layout="topleft"
         name="HoverTipText"
         width="100">
            Hover Tips:
        </text>
        <check_box
         control_name="ShowHoverTips"
         height="16"
         initial_value="true"
         label="Show Hover Tips"
         layout="topleft"
         left_delta="10"
         name="ShowHoverTips"
         tool_tip="Set this to show hover tips on avatars and some other things - set this one first (CTRL+SHIFT+T)"
         top_pad="5"
         width="256" />
        <check_box
         control_name="ShowAllObjectHoverTip"
         height="16"
         initial_value="true"
         label="on All Objects"
         tool_tip="Set this to show hover tips on in-world objects"
         layout="topleft"
         left_delta="10"
         name="ShowAllHoverTips"
         top_pad="2"
         width="256" />
        <check_box
         control_name="ShowLandHoverTip"
         height="16"
         initial_value="true"
         label="on Land"
         tool_tip="Set this to show hover tips on land"
         layout="topleft"
         name="ShowLandHoverTips"
         top_pad="2"
         width="256" />
		<check_box
		control_name="FSAdvancedTooltips"
		name="FSAdvancedTooltips"
		label="Show extended information in hovertips (Phoenix style)"
		layout="topleft"
		top_pad="2"
		left_delta="-10"
		height="16"
		width="350" />
        <check_box
		control_name="FSShowGroupTitleInTooltip"
		name="FSShowGroupTitleInTooltip"
		label="Show avatar group titles in hovertips"
		layout="topleft"
		top_pad="2"
		height="16"
		width="350" />

        <text
         type="string"
         length="1"
         follows="left|top"
         height="12"
         layout="topleft"
         left="265"
         name="tooltip_textbox"
         top="30"
         width="200">
           Hovertip Trigger Delays:
        </text>
		
        <slider
         control_name="ToolTipDelay"
         decimal_digits="3"
         follows="left|top"
         height="16"
         increment="0.025"
         initial_value="0.7"
         label="Tooltips:"
         label_width="50"
         layout="topleft"
         max_val="6.0"
         min_val="0"
         name="ToolTipDelay_slider"
         tool_tip="Delay after that tooltips for user interface elements such as buttons are shown. (Default: 0.7)"
         top_pad="1"
         left="275"
         width="200" />
        <text
         type="string"
         length="1"
         follows="left|top"
         height="16"
         layout="topleft"
         left_pad="1"
         name="ToolTipDelay_text"
         top_delta="0"
         width="80">
            seconds
        </text>
		
        <slider
         control_name="AvatarInspectorTooltipDelay"
         decimal_digits="3"
         follows="left|top"
         height="17"
         increment="0.025"
         initial_value="0.35"
         label="Avatars:"
         label_width="50"
         layout="topleft"
         left="275"
         max_val="6.0"
         min_val="0"
         name="AvatarInspectorTooltipDelay_slider"
         tool_tip="Delay after that hovertips for avatars are shown. (Default: 0.35)"
         top_pad="2"
         width="200" />
        <text
         type="string"
         length="1"
         follows="left|top"
         height="16"
         layout="topleft"
         left_pad="1"
         name="AvatarInspectorTooltipDelay_text"
         top_delta="0"
         width="80">
            seconds
        </text>
		
        <slider
         control_name="ObjectInspectorTooltipDelay"
         decimal_digits="3"
         follows="left|top"
         height="17"
         increment="0.025"
         initial_value="0.35"
         label="Objects:"
         label_width="50"
         layout="topleft"
         left="275"
         max_val="6.0"
         min_val="0"
         name="ObjectInspectorTooltipDelay_slider"
         tool_tip="Delay after that hovertips for objects are shown. (Default: 0.35)"
         top_pad="2"
         width="200" />
        <text
         type="string"
         length="1"
         follows="left|top"
         height="16"
         layout="topleft"
         left_pad="1"
         name="ObjectInspectorTooltipDelay_text"
         top_delta="0"
         width="80">
            seconds
        </text>

      <check_box
       control_name="UsePieMenu"
       height="16"
       initial_value="true"
       label="Use Pie Menu"
       layout="topleft"
       left="5"
       name="UsePieMenu"
       tool_tip="Use the classic V1 ring menu instead of rectangular context menus when right clicking on land, avatars, objects or attachments."
       top="140"
       width="256" />
      
      <check_box
       top_pad="2"
       control_name="ShowNetStats"
       follows="left|top"
       height="16"
       initial_value="false"
       name="ShowNetStats"
       label="Show lag meter"
       width="110"
       tool_tip="Show lag meter in the Status Overlay"/>

      <check_box
       control_name="FSEnableVolumeControls"
       height="16"
       name="FSEnableVolumeControls"
       label="Show media controls in top menu"
       width="256"
       tool_tip="If checked, Firestorm will show media controls (volume, media, stream) in upper right corner of the screen. Useful, if skin already has its own controls."/>

      <text
        type="string"
        length="1"
        follows="left|top"
        height="16"
        layout="topleft"
        name="standalone_textbox"
        left="5"
        top_pad="2"
        width="200">
        Use stand-alone windows for:
      </text>
      
      <check_box
       top_pad="2"
       control_name="FSUseStandaloneGroupFloater"
       follows="left|top"
       height="16"
       name="FSUseStandaloneGroupFloater"
       label="Group profiles"
       left="15"
       width="170"
       tool_tip="If enabled, group profiles will open in separate windows."/>
      <check_box
       control_name="FSUseStandaloneTeleportHistoryFloater"
       follows="left|top"
       height="16"
       name="FSUseStandaloneTeleportHistoryFloater"
       label="Teleport history"
       left_pad="5"
       width="170"
       tool_tip="If enabled, using the shortcut for teleport history will open the history in a separate window."/>
      <check_box
       top_pad="2"
       control_name="FSUseStandaloneBlocklistFloater"
       follows="left|top"
       height="16"
       name="FSUseStandaloneBlocklistFloater"
       label="Block/mute list"
       left="15"
       width="170"
       tool_tip="If enabled, the list of blocked/muted residents and objects will open in a separate window."/>
      <check_box
       control_name="FSUseStandalonePlaceDetailsFloater"
       follows="left|top"
       height="16"
       name="FSUseStandalonePlaceDetailsFloater"
       label="Landmarks, place details and teleport history details"
       left_pad="5"
       width="170"
       tool_tip="If enabled, landmarks, place details and teleport history details will open in separate windows."/>

      <text
       type="string"
       left="5"
       top_pad="2"
       width="140"
       follows="left|top"
       height="16"
       layout="topleft"
       name="ExtendedTeleportHistoryLabel">
        Extend teleport history by:
      </text>
	  
      <check_box
       top_delta="0"
       control_name="FSTeleportHistoryShowPosition"
       follows="left|top"
       height="16"
       name="FSTeleportHistoryShowPosition"
       label="Position"
       left_pad="15"
       width="75"
       tool_tip="If enabled, the local coordinates within the region will be shown in the teleport history."/>

      <check_box
       top_delta="0"
       control_name="FSTeleportHistoryShowDate"
       follows="left|top"
       height="16"
       name="FSTeleportHistoryShowDate"
       label="Date"
       left_pad="5"
       width="75"
       tool_tip="If enabled, the date and time of the teleport will be shown in the teleport history."/>

      <text
       type="string"
       left="5"
       top_pad="6"
       width="140"
       follows="left|top"
       height="16"
       layout="topleft"
       name="ScriptDialogsPerObjectLabel">
        Script Dialogs per Object:
      </text>
      <combo_box
       control_name="ScriptDialogPerObject"
       height="23"
       layout="topleft"
       left_pad="10"
       top_delta="-5"
       name="ScriptDialogPerObjectDropdown"
       width="180">
        <combo_box.item
         label="One per Object"
         name="ScriptDialogOption_0"
         value="0"/>
        <combo_box.item
         label="One per Object &amp; Channel"
         name="ScriptDialogOption_1"
         value="1"/>
        <combo_box.item
         label="Unconstrained"
         name="ScriptDialogOption_2"
         value="2"/>
      </combo_box>
      
        <check_box
         control_name="ShowScriptDialogsTopRight"
         height="16"
         initial_value="true"
         label="Script Dialogs in Top Right"
         layout="topleft"
         left="5"
         name="ShowScriptDialogsTopRight"
         tool_tip="Set this to move script dialog notifications to the top right corner of the screen (Classic V1.x behavior)."
         top_pad="2"
         width="256" />
        <check_box
         control_name="ShowGroupNoticesTopRight"
         height="16"
         initial_value="true"
         label="Group Notices and chiclets in Top Right"
         layout="topleft"
         name="ShowGroupNoticesTopRight"
         tool_tip="Set this to move group notifications and chiclet icons to the top right corner of the screen (Classic V1.x behavior)."
         top_pad="2"
         width="256" />
        <text
         type="string"
         left_delta="240"
         top_pad="-15"
         width="128"
         follows="left|top"
         height="12"
         layout="topleft"
         text_color="White_50"
         name="GroupTopRightRequiresRestart">
            (requires restart)
        </text>
        <check_box
         control_name="FSDisableIMChiclets"
         height="16"
         label="Hide group and IM chat chiclets"
         layout="topleft"
         left="5"
         name="FSDisableIMChiclets"
         tool_tip="If checked, Firestorm will not show any group / IM chat chiclets (notifications envelope and sum of IMs will remain on the screen)."
         top_pad="4"
         width="256" />

        <check_box
         control_name="FSGlobalButtonFlashOverride"
         type="string"
         left="5"
         top_pad="6"
         follows="left|top"
         height="12"
         layout="topleft"
         name="ButtonFlashing"
         width="128"
         label="Flashing IM tabs override"/>
        <slider
         control_name="FSButtonFlashCount"
         decimal_digits="0"
         follows="left|top"
         height="16"
         increment="1"
         label="Number of times IM tabs flash:"
         label_width="300"
         layout="topleft"
         left="30"
         min_val="0"
         max_val="16"
         name="ButtonsFlashCount"
         top_pad="2"
         width="471" />
        <slider
         control_name="FSButtonFlashRate"
         decimal_digits="0"
         follows="left|top"
         height="16"
         increment="0.25"
         label="IM tab flash rate:"
         tool_tip="Rate at which tabs flash (in Hz) - used for IM notifications"
         label_width="300"
         layout="topleft"
         left="30"
         min_val="0"
         max_val="4"
         name="ButtonFlashRate"
         top_pad="2"
         width="467" />
        <text
         type="string"
         length="1"
         follows="left|top"
         height="16"
         layout="topleft"
         left="490"
         name="ButtonFlashRateText"
         top_delta="0"
         width="50">
            Hz
        </text>
    </panel>

