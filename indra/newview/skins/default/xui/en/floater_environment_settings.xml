<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 legacy_header_height="18"
 height="321"
 layout="topleft"
 name="Environment Editor Floater"
 help_topic="environment_editor_floater"
 save_rect="true"
 title="Environment Settings"
 width="290">
 
 <check_box
  control_name="UseEnvironmentFromRegionAlways"
  height="16"
  initial_value="true"
  label="Always use parcel/region settings."
  layout="topleft"
  left="15"
  name="use_env_from_region_always"
  tool_tip="Checking this option will make environment always use the below settings."
  top="30"
  width="256" />

 <radio_group
  follows="top|left"
  height="45"
  layout="topleft"
  left="30"
  name="region_settings_radio_group"
  top_pad="10"
  width="200">
    <radio_item
  	 label="Use region settings"
  	 layout="topleft"
  	 name="use_region_settings"/>
    <radio_item
  	 label="Customize my environment"
  	 layout="topleft"
  	 name="use_my_settings"
  	 top_pad="10"/>
  </radio_group>

 <panel
  height="179"
  layout="topleft"
  left="15"
  name="user_environment_settings"
  top_pad="0"
  width="265">

 <text
  follows="top|left|right"
  font="SansSerifItalic"
  height="16"
  layout="topleft"
  left_delta="0"
  name="note1"
  top_pad="0"
  width="265"
  wrap="true">
  NOTE: Your custom settings will not
 </text>
 
 <text
  follows="top|left|right"
  font="SansSerifItalic"
  height="16"
  layout="topleft"
  left_delta="0"
  name="note2"
  top_pad="0"
  width="265"
  wrap="true">
  be visible to other users.
 </text>
 
  <view_border
  bevel_style="none"  
  follows="top|left"
  height="147"
  layout="topleft"
  left="0"
  name="border"
  top_pad="2"
  width="260"/>  

 <!-- Water Setting -->
 <text
  name="water_settings_title"
  follows="top|left"
  height="16"
  layout="topleft"
  left="8"
  top_delta="18"
  width="82">
  		Water Setting
  </text>
  <combo_box
   follows="top|left"
   left_pad="12"
   name="water_settings_preset_combo"
   top_delta="-5"
   width="150">
      <combo_box.item
       label="-Select a preset-"
       name="item0"/>
  </combo_box>
 

 <!-- Sky/Day Cycle Settings -->  
 <text
  name="sky_dayc_settings_title"
  follows="top|left"
  height="16"
  layout="topleft"
  left="8"
  top_pad="20"
  width="260">
  		Sky Setting (Fixed or Cyclical):
  </text>
  <radio_group
   layout="topleft"
   left_delta="10"
   name="sky_dayc_settings_radio_group"
   top_pad="15"
   height="50"
   width="72">
  	<radio_item
  	 layout="topleft"
  	 label="Fixed sky"
  	 name="my_sky_settings"/>
  	<radio_item
  	 layout="topleft"
  	 label="Day cycle"
  	 name="my_dayc_settings"
  	 top_pad="20"/>  	
  </radio_group>
  <combo_box
   follows="top|left"
   left_pad="12"
   name="sky_settings_preset_combo"
   top_delta="-7"
   width="150">
      <combo_box.item
       label="-Select a preset-"
       name="item0"/>
  </combo_box>
  <combo_box
   follows="top|left"
   name="dayc_settings_preset_combo"
   top_delta="31"
   width="150">
      <combo_box.item
       label="-Select a preset-"
       name="item0"/>
  </combo_box>
  </panel>

  <button
   follows="left|top"
   height="23"
   label="OK"
   layout="topleft"
   right="-147"
   name="ok_btn"
   top_pad="10"
   width="100" />
  <button
   follows="left|top"
   height="23"
   label="Cancel"
   layout="topleft"
   left_pad="10"
   name="cancel_btn"
   width="100" />	
</floater>
