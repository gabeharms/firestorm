<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 name="panel_im_control_panel"
 width="180"
 height="215"
 border="false">
    <avatar_list
     color="DkGray2"
     follows="left|top|right|bottom"
     height="130"
     ignore_online_status="true"
     layout="topleft"
     left="3"
     name="speakers_list"
     opaque="false"
     show_info_btn="false"
     show_profile_btn="false"
     top="10"
     width="180" />
    <button
     name="call_btn"
     label="Call Group"
     left_delta="27"
     width="125"
     height="20" />
    <button
     name="end_call_btn"
     label="Leave Call"
     width="125"
     height="20" 
     visible="false"/>
    <button
     enabled="false"
     name="voice_ctrls_btn"
     label="Open Voice Controls"
     width="125"
     height="20"
     visible="false"/>
</panel>
