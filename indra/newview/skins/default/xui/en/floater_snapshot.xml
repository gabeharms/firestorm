     height="20"
     label="Image Layers"
     layout="topleft"
     left_delta="50"
     name="layer_types"
     top_delta="-3"
     width="145">
        <combo_box.item
         label="Colors"
         name="Colors"
         value="colors" />
        <combo_box.item
         label="Depth"
         name="Depth"
         value="depth" />
        <combo_box.item
         label="Object Mattes"
         name="ObjectMattes"
         value="objects" />
