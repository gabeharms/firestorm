         label="Current Window"
         name="CurrentWindow"
         value="[i0,i0]" />
        <combo_box.item
         label="320x240"
         name="320x240"
         value="[i320,i240]" />
        <combo_box.item
         label="640x480"
         name="640x480"
         value="[i640,i480]" />
        <combo_box.item
