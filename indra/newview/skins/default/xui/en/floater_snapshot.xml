     allow_text_entry="false"
     decimal_digits="0"
     follows="left|top"
     height="20"
     increment="32"
     label="Width"
     label_width="30"
     layout="topleft"
     left="10"
     max_val="6016"
     min_val="32"
     name="snapshot_width"
     top="337"
     width="95" />
    <spinner
     allow_text_entry="false"
     decimal_digits="0"
     follows="left|top"
     height="20"
     increment="32"
     label="Height"
