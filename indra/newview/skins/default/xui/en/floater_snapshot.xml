     bottom_delta="20"
     label="Constrain Proportions"
     layout="topleft"
     left="10"
     name="keep_aspect_check" />
    <slider
     decimal_digits="0"
     follows="left|top"
     height="15"
     increment="1"
     initial_value="75"
     label="Image Quality"
     layout="topleft"
     left_delta="0"
     max_val="100"
     name="image_quality_slider"
     top_pad="5"
     width="210" />
    <text
     type="string"
     length="1"
     follows="left|top"
     height="20"
     layout="topleft"
     left_delta="0"
     name="layer_type_label"
     top_pad="8"
     width="50">
        Capture:
    </text>
