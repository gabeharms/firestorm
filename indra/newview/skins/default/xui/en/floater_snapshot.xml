     bottom_delta="20"
     label="Show HUD objects in snapshot"
     layout="topleft"
     left="10"
     name="hud_check" />
    <check_box
     bottom_delta="20"
     label="Keep open after saving"
     layout="topleft"
     left="10"
     name="keep_open_check" />
    <check_box
     bottom_delta="20"
     label="Freeze frame (fullscreen preview)"
     layout="topleft"
     left="10"
     name="freeze_frame_check" />
    <check_box
     bottom_delta="20"
     label="Auto-refresh"
     layout="topleft"
     left="10"
     name="auto_snapshot_check" />
