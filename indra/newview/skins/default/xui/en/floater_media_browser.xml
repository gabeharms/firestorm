<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 can_resize="true"
 height="440"
 layout="topleft"
 min_height="140"
 min_width="467"
 name="floater_about"
 save_rect="true"
 title="Media Browser"
 width="820">
