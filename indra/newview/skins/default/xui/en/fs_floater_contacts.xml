<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 can_close="false"
 can_drag_on_left="false"
 can_minimize="false"
 can_resize="true"
 can_tear_off="true"
 height="390"
 name="imcontacts"
 save_rect="true"
 save_visibility="true"
 single_instance="true"
 title="CONTACTS"
 width="395">
 	<string
	 name="no_friends"
	 value="No friends" />
    <tab_container
     follows="all"
     height="390"
     layout="topleft"
     left="4"
     name="friends_and_groups"
     tab_position="top"
     tab_width="80"
     tab_max_width = "80"
     tab_height="20"
     use_custom_icon_ctrl="false"
     tab_icon_ctrl_pad="2"
     halign="left"
     use_ellipses="true"
     top="0"
     width="393">
      <first_tab
       tab_bottom_image_flash="Toolbar_Left_Flash"/>
      <middle_tab
       tab_bottom_image_flash="Toolbar_Middle_Flash"/>
      <last_tab
       tab_bottom_image_flash="Toolbar_Right_Flash"/>
      
	  <panel
	   bottom="0"
	   filename="fs_panel_contacts_friends.xml"
	   label="Friends"
	   left="0"
	   right="-1"
	   layout="topleft"
	   name="friends_panel" />
	  
      <panel
       bottom="0"
	   filename="fs_panel_contacts_groups.xml"
       label="Groups"
       left="0"
	   right="-1"
	   layout="topleft"
       name="groups_panel"/>
	   
    </tab_container>
</floater>
