<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 top="0"
 left="0"
 width="420"
 height="480"
 layout="topleft"
 follows="all"
 name="panel_notes"
 label="Notes &amp; Privacy">

    <loading_indicator
     top="3"
     right="-10"
     height="23"
     width="23"
     layout="topleft"
     follows="top|right"
     name="progress_indicator"
     visible="false" />

    <text
     top="6"
     left="6"
     right="-6"
     height="16"
     layout="topleft"
     follows="left|top|right"
     name="status_message"
     font.style="BOLD"
     value="Private notes on this avatar:" />

    <text_editor
     top_pad="4"
     left="6"
     right="-6"
     height="335"
     layout="topleft"
     follows="all"
     name="notes_edit"
     max_length="1000"
     enabled="false"
     word_wrap="true" />

    <text
     follows="left|bottom|right"
     height="16"
     layout="topleft"
     left="6"
     name="status_message2"
     top_pad="8"
     font.style="BOLD"
     value="Allow this avatar to:"
     right="-6"/>

    <check_box
     left="10"
     height="16"
     width="293"
     layout="topleft"
     follows="left|bottom|right"
     name="status_check"
     label="See when I am online"
     enabled="false" />

    <check_box
     left="10"
     height="16"
     width="293"
     layout="topleft"
     follows="left|bottom|right"
     name="map_check"
     label="Find me on the world map"
     enabled="false" />

    <check_box
     left="10"
     height="16"
     width="293"
     layout="topleft"
     follows="left|bottom|right"
     name="objects_check"
     label="Edit, delete or take my objects"
     enabled="false" />
</panel>
