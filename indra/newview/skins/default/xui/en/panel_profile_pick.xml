<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 top="0"
 left="0"
 height="360"
 width="310"
 layout="topleft"
 follows="all"
 name="panel_pick_info"
 help_topic="profile_pick_info" >

    <texture_picker
     top="10"
     left="10"
     height="180"
     width="290"
     layout="topleft"
     follows="left|top"
     name="pick_snapshot"
     fallback_image="default_land_picture.j2c" />

    <line_editor
     top_pad="-15"
     left="10"
     height="20"
     width="290"
     layout="topleft"
     follows="left|top"
     enabled="false"
     name="pick_name" />

    <text_editor
     top_pad="8"
     left="10"
     height="100"
     width="290"
     layout="topleft"
     follows="left|top|bottom"
     border_visible="true"
     v_pad="3"
     h_pad="4"
     enabled="false"
     max_length="1023"
     name="pick_desc"
     word_wrap="true"
     allow_html="true" />

    <line_editor
     top_pad="10"
     left="10"
     height="20"
     width="290"
     enabled="false"
     layout="topleft"
     follows="left|bottom"
     name="pick_location" />

    <button
     left="10"
     height="20"
     width="80"
     layout="topleft"
     follows="left|bottom"
     label="Teleport"
     name="teleport_btn" />

    <button
     left_pad="5"
     height="20"
     width="100"
     bottom_delta="0"
     layout="topleft"
     follows="left|bottom"
     label="Show on Map"
     name="show_on_map_btn" />

    <button
     left_pad="5"
     height="20"
     width="100"
     layout="topleft"
     follows="left|bottom"
     label="Set Location"
     name="set_location_btn" />

</panel>
