<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 top="0"
 left="0"
 height="360"
 width="310"
 layout="topleft"
 follows="all"
 name="panel_pick_info"
 help_topic="profile_pick_info" >
 
    <panel.string
     name="location_notice">
(will update after save)
    </panel.string>

    <texture_picker
     top="10"
     left="10"
     height="180"
     width="290"
     layout="topleft"
     follows="left|right|top"
     name="pick_snapshot"
     fallback_image="default_land_picture.j2c" />

    <line_editor
     top_pad="-15"
     left="10"
     height="20"
     width="290"
     layout="topleft"
     follows="left|right|top"
     name="pick_name" />

    <text_editor
     top_pad="8"
     left="10"
     height="70"
     width="290"
     layout="topleft"
     follows="all"
     name="pick_desc"
     border_visible="true"
     v_pad="3"
     h_pad="4"
     enabled="false"
     max_length="1023"
     word_wrap="true"
     allow_html="true" />

    <line_editor
     left="10"
     height="20"
     width="290"
     layout="topleft"
     follows="left|right|bottom"
     name="pick_location"
     type="string"
     length="1">
        Loading...
    </line_editor>

    <button
     left="10"
     height="20"
     width="80"
     bottom="-40"
     layout="topleft"
     follows="left|bottom"
     label="Teleport"
     name="teleport_btn" />

    <button
     left_pad="5"
     height="20"
     width="100"
     bottom_delta="0"
     layout="topleft"
     follows="left|bottom"
     label="Show on Map"
     name="show_on_map_btn" />

    <button
     left_pad="5"
     height="20"
     width="100"
     bottom_delta="0"
     layout="topleft"
     follows="left|bottom"
     label="Set Location"
     tool_tip="Set to Current Location"
     name="set_to_curr_location_btn"
     visible="false" />
     
    <button
     left="10"
     height="20"
     width="100"
     bottom="-15"
     layout="topleft"
     follows="left|bottom"
     label="Save Pick"
     name="save_changes_btn"
     visible="false" />

</panel>
