     height="14"
     initial_value="false"
     label="Show folders"
     layout="topleft"
     name="show_folders_check"
     top_pad="0"
     left_delta="-3"
     width="200" />
   </panel>
   
   <panel 
    border="false" 
    top_delta="0" 
	follows="right|top" 
	height="230" 
	label="Local" 
	left="0" 
	mouse_opaque="false" 
	name="local_tab" 
	width="230">

	<button 
    top="2" 
	enabled="true" 
	follows="left|top" 
	font="SansSerifSmall" 
	halign="center" 
	height="20" 
	label="Add"
	left_delta="4" 
	mouse_opaque="true" 
	name="l_add_btn" 
	scale_image="true" 
	width="54" 
	visible="true" />
	
   <button 
    top_delta="0" 
	enabled="true" 
	follows="left|top" 
	font="SansSerifSmall" 
	halign="center" 
	height="20" 
	label="Delete"
	left_delta="56" 
	mouse_opaque="true" 
	name="l_del_btn" 
	scale_image="true" 
	width="54" 
	visible="true" />
	
   <button 
    top_delta="0" 
	enabled="true" 
	follows="left|top" 
	font="SansSerifSmall" 
	halign="center" 
	height="20" 
	label="Upload"
	left_delta="56" 
	mouse_opaque="true" 
	name="l_upl_btn" 
	scale_image="true" 
	width="54" 
	visible="true" />
	
