<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 legacy_header_height="18"
 can_minimize="false"
 can_resize="true"
 height="290"
 layout="topleft"
 min_height="290"
 min_width="410"
 name="texture picker"
 help_topic="texture_picker"
 title="PICK: TEXTURE"
 width="410">
