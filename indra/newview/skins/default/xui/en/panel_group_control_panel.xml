<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="false"
 height="238"
 name="panel_im_control_panel"
 width="180">

    <avatar_list
     color="DkGray2"
     follows="left|top|right|bottom"
     height="130"
     ignore_online_status="true"
     layout="topleft"
     left="3"
     name="speakers_list"
     opaque="false"
     show_info_btn="false"
     show_profile_btn="false"
     top="10"
     width="180"/>

    <panel
     background_visible="true"
     bg_alpha_color="0.2 0.2 0.2 1"
     border="false"
     bottom="1"
     follows="left|bottom"
     height="98"
     left="0"
     name="panel_buttons"
     width="180">

        <button
         height="20"
         label="Group Info"
         left_delta="28"
         name="group_info_btn"
         width="125"/>

        <button
         height="20"
         label="Call Group"
         name="call_btn"
         width="125"/>

        <button
         height="20"
         label="Leave Call"
         name="end_call_btn"
         visible="false"
         width="125"/>

        <button
         enabled="false"
         height="20"
         label="Open Voice Controls"
         name="voice_ctrls_btn"
         visible="false"
         width="125"/>

    </panel>
</panel>
