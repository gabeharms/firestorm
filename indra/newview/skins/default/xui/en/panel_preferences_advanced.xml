<?xml version="1.0" encoding="UTF-8"?>
<panel
 border="true"
 follows="all"
 height="440"
 layout="topleft"
 left="1"
 top="1"
 width="540"
 label="Advanced"
 name="advanced">
 <panel.string
     name="aspect_ratio_text">
        [NUM]:[DEN]
    </panel.string>
    <panel.string
     name="middle_mouse">
        Middle Mouse
    </panel.string>
    <check_box
     control_name="AllowMultipleViewers"
     follows="top|left"
     height="15"
     label="Allow Multiple Viewers (May reduce stability and performance)"
     layout="topleft"
     left="30"
     name="allow_multiple_viewer_check"
     top_pad="20"
     width="237"/>
    <check_box
     control_name="ForceShowGrid"
     follows="top|left"
     height="15"
     label="Allow login to other grids (Not all grids will support Firestorm)"
     layout="topleft"
     left="30"
     name="show_grid_selection_check"
     top_pad="5"
     width="237"/>
    <check_box
     control_name="UseDebugMenus"
     follows="top|left"
     height="15"
     label="Show Advanced Menu (Use at own risk!)"
     layout="topleft"
     left="30"
     name="show_advanced_menu_check"
     top_pad="5"
     width="237"/>
    <check_box
     control_name="QAMode"
     follows="top|left"
     height="15"
     label="Show Developer Menu"
     layout="topleft"
     left="30"
     name="show_develop_menu_check"
     top_pad="5"
     width="237"/>
    <panel
    border="false"
    follows="all"
    height="56"
    layout="topleft"
    left="0"
    top_pad="2"
    width="540"
    label=""
    name="debug_search_panel">
      <check_box
        control_name="DebugSearch"
        height="16"
        initial_value="false"
        label="Debug Search"
        layout="topleft"
        left="30"
        name="DebugSearch"
        top_pad="1"
        width="256" />
      <text
      type="string"
      length="1"
      follows="left|top"
      height="12"
      layout="topleft"
      left="50"
      name="search_url_debug_text"
      top_pad="5"
      width="400">
        Override current search url: (no override if empty)
      </text>
      <line_editor
        control_name="SearchURLDebug"
        enabled_control="DebugSearch"
        border_style="line"
        border_thickness="1"
        follows="left|top"
        font="SansSerif"
        height="19"
        layout="topleft"
        left="50"
        max_length="4096"
        name="search_url_debug"
        top_pad="5"
        width="270" />
      <button
      enabled_control="DebugSearch"
      follows="left|top"
      height="19"
      label="Clear"
      label_selected="Clear"
      layout="topleft"
      left_pad="2"
      name="clear_search_url_debug"
      top_delta="0"
      width="50">
        <button.commit_callback
        function="Pref.ClearDebugSearchURL" />
      </button>
      <button
      enabled_control="DebugSearch"
      follows="left|top"
      height="19"
      label="Pick"
      layout="topleft"
      left_pad="2"
      name="pick_current_search_url"
      top_delta="0"
      width="50">
        <button.commit_callback
          function="Pref.PickDebugSearchURL" />
      </button>
    </panel>
    <button
     top="40"
     enabled="true"
     follows="left|top"
     halign="center"
     height="25"
     label="Reset All Settings"
     label_selected="Reset All Settings..."
     left="30"
     mouse_opaque="true"
     name="clear_settings"
     scale_image="true"
     width="200" >
        <button.commit_callback
         function="Pref.ClearSettings" />
    </button>

 </panel>
