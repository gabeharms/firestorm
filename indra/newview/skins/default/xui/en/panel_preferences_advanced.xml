<?xml version="1.0" encoding="UTF-8"?>
<panel
 border="true"
 follows="all"
 height="440"
 layout="topleft"
 left="1"
 top="1"
 width="540"
 label="Advanced"
 name="advanced">
 <panel.string
     name="aspect_ratio_text">
        [NUM]:[DEN]
    </panel.string>
    <panel.string
     name="middle_mouse">
        Middle Mouse
    </panel.string>
    <check_box
     control_name="AllowMultipleViewers"
     follows="top|left"
     height="15"
     label="Allow Multiple Viewers (May reduce stability and performance)"
     layout="topleft"
     left="30"
     name="allow_multiple_viewer_check"
     top_pad="20"
     width="237"/>
    <check_box
     control_name="ForceShowGrid"
     follows="top|left"
     height="15"
     label="Allow login to other grids (Not all grids will support Firestorm)"
     layout="topleft"
     left="30"
     name="show_grid_selection_check"
     top_pad="5"
     width="237"/>
    <check_box
     control_name="UseDebugMenus"
     follows="top|left"
     height="15"
     label="Show Advanced Menu (Use at own risk!)"
     layout="topleft"
     left="30"
     name="show_advanced_menu_check"
     top_pad="5"
     width="237"/>
    <check_box
     control_name="QAMode"
     follows="top|left"
     height="15"
     label="Show Developer Menu"
     layout="topleft"
     left="30"
     name="show_develop_menu_check"
     top_pad="5"
     width="237"/>

    <check_box
     control_name="FSMenuSearch"
     follows="top|left"
     height="15"
     label="Show Menu Search (needs restart)."
     layout="topleft"
     left="30"
     name="show_search_menu_check"
     top_pad="5"
     width="237"/>

    <check_box
     control_name="UseAnimationTimeSteps"
     tool_tip="This setting may reduce render load for distant avatars but, may also cause their animations to play at incorrect speeds"
     follows="top|left"
     height="15"
     label="Enable the use of animation timesteps (experimental)"
     layout="topleft"
     left="30"
     name="UseAnimationTimeSteps"
     top_pad="10"
     width="237"/>

    <text
     name="BackgroundYieldTimeText"
     follows="top|left"
     layout="topleft"
     left="30"
     right="-1"
     word_wrap="true"
     top_pad="25"
     height="100">
        Amount of time, in milliseconds, to yield every frame to other applications when [APP_NAME] is not the foreground window (default: 40; 1 second = 1000 milliseconds):
    </text>
    <slider
     can_edit_text="true"
     control_name="BackgroundYieldTime"
     decimal_digits="0"
     follows="top|left"
     layout="topleft"
     height="15"
     increment="10"
     initial_value="40"
     left="30"
     max_val="1000"
     min_val="0"
     name="BackgroundYieldTime"
     top_delta="40"
     width="250" />

    <button
     top="40"
     enabled="true"
     follows="left|top"
     halign="center"
     height="25"
     label="Reset All Settings"
     label_selected="Reset All Settings..."
     left="30"
     mouse_opaque="true"
     name="clear_settings"
     scale_image="true"
     width="200" >
        <button.commit_callback
         function="Pref.ClearSettings" />
    </button>

 </panel>
