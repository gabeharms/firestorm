<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 bevel_style="in"
 follows="left|top|right|bottom"
 height="625"
 label="Picks"
 layout="topleft"
 left="0"
 name="panel_picks"
 top="0"
 width="305">
