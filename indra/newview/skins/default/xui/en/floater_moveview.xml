     name="slide right btn"
     picture_style="true"
     quadrant="right"
     scale_image="false"
     tool_tip="Move Right"
     top_delta="0"
     width="25" />
    <joystick_turn
     follows="left|bottom"
     height="25"
     image_selected="move_forward_in.tga"
     image_unselected="move_forward_out.tga"
     layout="topleft"
     left_delta="-21"
     name="forward btn"
     picture_style="true"
     quadrant="up"
     scale_image="false"
