     image_unselected="move_down_out.tga"
     layout="topleft"
     left_delta="0"
     name="move down btn"
     picture_style="true"
     scale_image="false"
     tool_tip="Crouch or Fly Down"
     top_delta="25"
     width="25" />
    <joystick_slide
     follows="left|bottom"
     height="25"
     image_selected="move_left_in.tga"
     image_unselected="move_left_out.tga"
     layout="topleft"
     left="20"
     name="slide left btn"
     picture_style="true"
