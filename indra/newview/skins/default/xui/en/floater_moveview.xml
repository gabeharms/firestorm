<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 can_minimize="false"
 center_horiz="true"
 follows="bottom"
 height="58"
 layout="topleft"
 name="move_floater"
 save_rect="true"
 save_visibility="true"
 width="135">
    <button
     follows="left|bottom"
     height="25"
     image_disabled="move_turn_left_out.tga"
     image_disabled_selected="move_turn_left_in.tga"
