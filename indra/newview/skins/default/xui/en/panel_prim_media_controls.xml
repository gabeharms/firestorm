	<layout_panel
		name="close"
		auto_resize="false"
		user_resize="false"
		layout="topleft"
		min_width="21"
		width="21" >
	  <button
		  height="22"
		  image_selected="media_btn_done.png"
		  image_unselected="media_btn_done.png"
		  layout="topleft"
		  tool_tip ="Close media control"
		  top_delta="-4"
		  width="21" >
		<button.commit_callback
