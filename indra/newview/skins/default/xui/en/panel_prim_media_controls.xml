		name="new_window"
		auto_resize="false"
		user_resize="false"
		layout="topleft"
		min_width="22"
		width="22">
	  <button
		  height="22"
		  image_selected="media_btn_newwindow.png"
		  image_unselected="media_btn_newwindow.png"
		  layout="topleft"
		  tool_tip = "Open URL in browser"
		  top_delta="-3"
		  min_width="24"
		  width="24" >
		<button.commit_callback
