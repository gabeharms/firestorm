<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<!-- Width and height of this panel is adapted in code to fit the parent panel -->
<panel
 follows="all"
 height="21"
 layout="topright"
 name="panel_stand_stop_flying"
 mouse_opaque="false"
 visible="true"
 width="158">
    <button
     follows="left|bottom"
     height="19"
     label="Stand"
     layout="topleft"
     left="1"
     name="stand_btn"
     tool_tip="Click here to stand up."
     top="2"
     visible="false"
     width="77" />
    <button
     follows="left|bottom"
     height="19"
     label="Stop Flying"
     layout="topleft"
     left_delta="0"
     name="stop_fly_btn"
     tool_tip="Stop flying"
     top="2"
     visible="false"
     width="77" />
    <button
     follows="right|bottom"
     height="19"
     label="Flycam"
     layout="topleft"
     right="-5"
     name="flycam_btn"
     tool_tip="Stop Flycam Mode"
     top="2"
     visible="false"
     width="77">
        <commit_callback
         function="View.JoystickFlycam" />
    </button>
</panel>
