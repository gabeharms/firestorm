<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="all"
 height="440"
 layout="topleft"
 left="1"
 top="1"
 width="540"
 label="Move"
 name="move_panel">
<tab_container
 label="Move and View"
 layout="topleft"
 follows="all"
 top="5"
 bottom="-10"
 left="1"
 right="-1"
 name="tabs"
 tab_min_width="50"
 tab_position="top" >

    <!--View-->
    <panel
     top_pad="5"
     bottom="-1"
     left="1"
     right="-1"
     follows="all"
     label="View"
     name="tab-view" >
        <icon
         follows="left|top"
         height="18"
         image_name="Cam_FreeCam_Off"
         layout="topleft"
         name="camera_icon"
         mouse_opaque="false"
         visible="true"
         width="18"
         left="30"
         top="10"/>
        <slider
         can_edit_text="true"
         control_name="CameraAngle"
         decimal_digits="2"
         follows="left|top"
         height="16"
         increment="0.025"
         initial_value="1.57"
         layout="topleft"
         label_width="100"
         label="View angle"
         left_pad="30"
         max_val="2.97"
         min_val="0.17"
         name="camera_fov"
         show_text="true"
         width="275" />
        <slider
         can_edit_text="true"
         control_name="CameraOffsetScale"
         decimal_digits="2"
         follows="left|top"
         height="16"
         increment="0.025"
         initial_value="1"
         layout="topleft"
         label="Distance"
         left_delta="0"
         label_width="100"
         max_val="3"
         min_val="0.5"
         name="camera_offset_scale"
         show_text="true"
         width="275"
         top_pad="5"/>
        <slider
         can_edit_text="true"
         control_name="ZoomTime"
         decimal_digits="2"
         follows="left|top"
         height="16"
         increment="0.1"
         initial_value="0.4"
         layout="topleft"
         label="Transition Time"
         left_delta="0"
         label_width="100"
         max_val="4"
         min_val="0"
         name="camera_transition_time"
         show_text="true"
         width="275"
         top_pad="5"/>
        <slider
         can_edit_text="true"
         control_name="CameraPositionSmoothing"
         decimal_digits="2"
         follows="left|top"
         height="16"
         increment="0.1"
         initial_value="1"
         layout="topleft"
         label="Smoothing"
         left_delta="0"
         label_width="100"
         max_val="9"
         min_val="0"
         name="camera_position_smoothing"
         show_text="true"
         width="275"
         top_pad="5"/>
        <check_box
         control_name="DisableCameraConstraints"
         height="16"
         initial_value="true"
         label="Allow greater camera freedom"
         layout="topleft"
         left_delta="0"
         name="DisableCameraConstraints"
         tool_tip="Set this to move your camera beyond its normal bounds and below land level. If you are not good at moving the camera, more of your shots may be at bad angles."
         top_pad="7"
         width="315"/>
        <text
         follows="left|top"
         type="string"
         length="1"
         height="10"
         left="80"
         name="heading2"
         width="300"
         top_pad="5">
         Automatically pose avatar during (select one or more):
        </text>
        <check_box
         control_name="EditCameraMovement"
         height="20"
         follows="left|top"
         label="Build/Edit"
         layout="topleft"
         left_delta="30"
         name="edit_camera_movement"
         tool_tip="Use automatic camera positioning when entering and exiting edit mode"
         width="280"
         top_pad="5" />
        <check_box
         control_name="AppearanceCameraMovement"
         follows="left|top"
         height="16"
         label="Appearance"
         layout="topleft"
         name="appearance_camera_movement"
         tool_tip="Use automatic camera positioning while in edit mode"
         width="100" />
        <check_box
         control_name="EditAppearanceLighting"
         follows="left|top"
         height="16"
         label="Add Additional Lighting"
         layout="topleft"
		 left_pad="10"
         name="EditAppearanceLighting"
         tool_tip="Enable or disable the additional lighting used while editing avatar appearance."
         width="150" />
        <icon
         follows="left|top"
         height="18"
         image_name="Move_Walk_Off"
         layout="topleft"
         name="avatar_icon"
         mouse_opaque="false"
         visible="true"
         width="18"
         top_pad="6"
         left="30" />
        <check_box
         control_name="EnableMouselook"
         follows="top"
         height="20"
         initial_value="true"
         label="Enable Mouselook functionality"
         layout="topleft"
         left_pad="30"
         name="EnableMouselook"
         tool_tip="Allow first person perspective and mouse control of camera"
         width="256" />
        <check_box
         control_name="FirstPersonAvatarVisible"
         follows="left|top"
         enabled_control="EnableMouselook"
         height="16"
         label="Show avatar in Mouselook"
         layout="topleft"
         left_delta="5"
         top_pad="7"
         name="first_person_avatar_visible"
         width="256" />
        <check_box
         control_name="FSShowMouselookInstructions"
         follows="left|top"
         enabled_control="EnableMouselook"
         height="16"
         initial_value="true"
         label="Show Mouselook instructions"
         layout="topleft"
         name="mouselook_instructions_visible"
         tool_tip="Show Mouselook Instructions"
         width="256" />
        <check_box
         control_name="ShowCrosshairs"
         follows="left|top"
         enabled_control="EnableMouselook"
         height="16"
         initial_value="true"
         label="Show Mouselook Crosshairs"
         layout="topleft"
         name="ShowCrosshairs"
         tool_tip="Display crosshairs when in mouselook mode"
         width="256" />
        <text
         type="string"
         length="1"
         follows="left|top"
         height="10"
         layout="topleft"
         left_delta="3"
         name="Mouse Sensitivity"
         top_pad="7"
         width="160">
         Mouselook mouse sensitivity:
        </text>
        <slider
         control_name="MouseSensitivity"
         follows="left|top"
         enabled_control="EnableMouselook"
         height="15"
         initial_value="2"
         layout="topleft"
         show_text="false"
         left_pad="5"
         max_val="15"
         name="mouse_sensitivity"
         top_delta="-1"
         width="145" />
        <check_box
         control_name="InvertMouse"
         enabled_control="EnableMouselook"
         height="16"
         label="Invert"
         layout="topleft"
         left_pad="2"
         name="invert_mouse"
         top_delta="0"
         width="128" />
	</panel>

    <!--Movement-->
    <panel
     top_pad="5"
     bottom="-1"
     left="1"
     right="-1"
     follows="all"
     label="Movement"
     name="tab-movement" >
        <check_box
         control_name="ArrowKeysAlwaysMove"
         follows="left|top"
         height="20"
         label="Arrow keys always move me"
         layout="topleft"
         left_delta="10"
         name="arrow_keys_move_avatar_check"
         width="237"
         top_pad="2"/>
        <check_box
         control_name="FSUseAzertyKeyboardLayout"
         follows="left|top"
         height="20"
         label="Use AZERTY keyboard layout"
         layout="topleft"
         left_delta="0"
         name="FSUseAzertyKeyboardLayout"
         width="180"
         top_pad="0"/>
        <text
         name="FSUseAzertyKeyboardLayout_requires_restart"
         follows="left|top"
         layout="topleft"
         left_pad="10"
         top_delta="3"
         height="20"
         width="130"
         text_color="White_25">
            (requires restart)
        </text>
        <check_box
         control_name="AllowTapTapHoldRun"
         follows="left|top"
         height="20"
         label="Tap-tap-hold to run"
         layout="topleft"
         left_delta="-190"
         name="tap_tap_hold_to_run"
         width="237"
         top_pad="-3"/>
        <check_box
         control_name="AutomaticFly"
         follows="left|top"
         height="20"
         label="Fly/land on holding up/down"
         layout="topleft"
         left_delta="0"
         name="automatic_fly"
         width="237"
         top_pad="0"/>
        <check_box
         control_name="FSCrouchToggle"
         follows="left|top"
         height="20"
         label="Enable crouch toggle mode"
         layout="topleft"
         left_delta="0"
         name="crouch_toggle_mode"
         width="237"
         top_pad="0"/>
        <check_box
         control_name="PlayModeUISndTeleportOut"
         follows="left|top"
         height="20"
         label="Play sound effect when teleporting"
         layout="topleft"
         left_delta="0"
         name="PlayTeleportSound"
         width="237"
         top_pad="0"/>
        <check_box
         control_name="FSFlyAfterTeleport"
         follows="left|top"
         height="20"
         label="Always fly after teleporting"
         layout="topleft"
         left_delta="0"
         name="FSFlyAfterTeleport"
         width="237"
         top_pad="0"/>
        <text
         follows="left|top"
         type="string"
         length="1"
         height="10"
         layout="topleft"
         left="48"
         name="single_click_action_lbl"
         width="150"
         top_pad="10">
         Single click on land:
        </text>
        <combo_box
         height="23"
         layout="topleft"
         left_pad="10"
         top_delta="-6"
         name="single_click_action_combo"
         width="200">
            <combo_box.item
             label="No action"
             name="0"
             value="0"/>
            <combo_box.item
             label="Move to clicked point"
             name="1"
             value="1"/>
            <combo_box.commit_callback
             function="Pref.ClickActionChange"/>
        </combo_box>
        <text
         follows="left|top"
         type="string"
         length="1"
         height="10"
         layout="topleft"
         left="48"
         name="double_click_action_lbl"
         width="150"
         top_pad="10">
         Double click on land:
        </text>
        <combo_box
         height="23"
         layout="topleft"
         left_pad="10"
         top_delta="-6"
         name="double_click_action_combo"
         width="200">
            <combo_box.item
             label="No action"
             name="0"
             value="0"/>
            <combo_box.item
             label="Move to clicked point"
             name="1"
             value="1"/>
            <combo_box.item
             label="Teleport to clicked point"
             name="2"
             value="2"/>
            <combo_box.commit_callback
             function="Pref.ClickActionChange"/>
        </combo_box>
        <button
         follows="top|left"
         height="23"
         label="Joystick Configuration"
         left="100"
         name="joystick_setup_button"
         top_pad="5"
         width="155">
            <button.commit_callback
             function="Floater.Show"
             parameter="pref_joystick" />
        </button>
    </panel>
    
    <!-- Firestorm -->
    <panel
     top_pad="5"
     bottom="-1"
     left="1"
     right="-1"
     follows="all"
     label="Firestorm"
     name="tab-firestorm" >
        <text
         top_pad="10"
         type="string"
         length="1"
         follows="left|top"
         height="15"
         layout="topleft"
         left="15"
         name="camera_options_label"
         width="200">
           Camera options:
        </text>

        <check_box
         top_pad="4"
         follows="left|top"
         height="16"
         initial_value="false"
         label="Clicking your avatar keeps camera position"
         layout="topleft"
         left="30"
         name="clickonavatarkeepscamera"
         width="270"
         control_name="ClickOnAvatarKeepsCamera"
         tool_tip="Normally, clicking on your avatar resets the camera position. This option removes this behavior."/>

        <check_box
         top_pad="4"
         follows="left|top"
         height="16"
         initial_value="false"
         label="Reset camera position after teleport (within a region)"
         layout="topleft"
         left="30"
         name="FSResetCameraOnTP"
         width="270"
         control_name="FSResetCameraOnTP"
         tool_tip="Normally, the camera position gets reset when teleporting. This option prevents this behavior."/>
		 
		<check_box
         top_pad="4"
         follows="left|top"
         height="16"
         initial_value="false"
         label="Disable minimum camera zoom distance"
         layout="topleft"
         left="30"
         name="disableminzoomdist"
         width="350"
         control_name="FSDisableMinZoomDist"
         tool_tip="Disable the constraint on the closest distance the camera is allowed to get to an object."/>

        <check_box
         top_pad="4"
         follows="left|top"
         height="16"
         initial_value="false"
         label="Turn avatar towards camera direction on reset view"
         layout="topleft"
         left="30"
         name="resetviewturnsavatar"
         width="350"
         control_name="ResetViewTurnsAvatar"
         tool_tip="This option keeps the camera direction and turns the avatar when Reset View is selected (hit ESC key)."/>

        <check_box
         top_pad="4"
         follows="left|top"
         height="16"
         initial_value="false"
         label="Allow the camera to move without constraints through prims"
         layout="topleft"
         left="30"
         name="ignorecameraconstraints"
         width="350"
         control_name="FSIgnoreSimulatorCameraConstraints"
         tool_tip="Ignores the 'push' the simulator applies to your camera to keep it out of objects."/>

        <text
         name="ignorecameraconstraints_requires_restart"
         follows="left|top"
         layout="topleft"
         left_pad="10"
         top_delta="0"
         height="20"
         width="130"
         text_color="White_25">
            (requires restart)
        </text>

        <check_box
         top_pad="12"
         follows="left|top"
         height="16"
         initial_value="false"
         label="Enable Minimap rotation"
         layout="topleft"
         left="15"
         name="minimaprotate"
         width="350"
         control_name="MiniMapRotate"
         tool_tip="Rotate miniature world map to avatar direction."/>

        <check_box
         control_name="MiniMapChatRing"
         name="MiniMapChatRing"
         label="Display a ring on the Minimap indicating local chat range"
         layout="topleft"
         top_pad="0"
         height="20"
         width="350" />
		 
        <text
         follows="left|top"
         type="string"
         length="1"
         height="10"
         layout="topleft"
         left="35"
         name="netmap_double_click_action_lbl"
         width="150"
         top_pad="10">
         Double click on Minimap:
        </text>
        <combo_box
         control_name="FSNetMapDoubleClickAction"
         height="23"
         layout="topleft"
         left_pad="10"
         top_delta="-6"
         name="netmap_double_click_action_combo"
         width="200">
            <combo_box.item
             label="No action"
             name="0"
             value="0"/>
            <combo_box.item
             label="Open world map"
             name="1"
             value="1"/>
            <combo_box.item
             label="Teleport to clicked point"
             name="2"
             value="2"/>
        </combo_box>

        <check_box top_pad="5"
         follows="left|top"
         height="16"
         label="Turn avatar around when walking backwards"
         left="15"
         name="backwardsturnavatar"
         width="270"
         control_name="TurnAroundWhenWalkingBackwards"
         tool_tip="Turns your avatar around to face the camera when you are walking backwards."/>

        <check_box top_pad="5"
         follows="left|top"
         height="16"
         initial_value="false"
         label="Filter duplicate Landmarks on World Map"
         left="15"
         name="WorldmapFilterDuplicateLandmarks"
         width="270"
         control_name="WorldmapFilterDuplicateLandmarks"
         tool_tip="Filters duplicate Landmark entries in the Landmark list on the World Map."/>

        <check_box top_pad="5"
         follows="left|top"
         height="16"
         initial_value="false"
         label="Show additional region information on World Map"
         left="15"
         name="FSAdvancedWorldmapRegionInfo"
         width="270"
         control_name="FSAdvancedWorldmapRegionInfo"
         tool_tip="Shows additional region infos on the world map (avatar count and maturity level)."/>

        <check_box top_pad="5"
         follows="left|top"
         height="16"
         initial_value="false"
         label="Notify if the simulator version changes while changing the region"
         left="15"
         name="FSShowServerVersionChangeNotice"
         width="270"
         control_name="FSShowServerVersionChangeNotice"
         tool_tip="Displays a notice if the simulator version changes during a teleport or while crossing a region."/>

        <check_box top_pad="5"
         follows="left|top"
         height="16"
         initial_value="false"
         label="Show simulator channel in status bar"
         left="15"
         name="FSStatusbarShowSimulatorVersion"
         width="270"
         control_name="FSStatusbarShowSimulatorVersion"
         tool_tip="Shows the current simulator channel in the V1-like status bar."/>
	 </panel>
</tab_container>
</panel>
