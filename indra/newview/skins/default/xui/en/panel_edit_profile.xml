<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 class="edit_profile_panel" 
 background_visible="true"
 bevel_style="in"
 follows="left|top|right|bottom"
 height="690"
 label="Profile Edit"
 layout="topleft"
 left="10"
 mouse_opaque="true"
 name="edit_profile_panel"
 top="10"
 width="305">
    <text     
     top="0" 
     left="9" 
     height="20" 
     follows="left|top"
     font="SansSerifHugeBold" 
     layout="topleft"
     name="title_text"
     text_color="white"
     width="250">
      Edit Profile
    </text>
    <panel
     background_visible="true"
     bg_alpha_color="DkGray2"
     follows="left|top|right|bottom"  
     height="620"
     layout="topleft"
     left="9"
     name="data_panel" 
     top_pad="10"
     width="280">
      <text
       top_pad="5" 
       left="9" 
       height="20" 
       follows="left|top"
       font="SansSerifBigBold"
       layout="topleft"
       name="name_text"
       text_color="white"
       width="350">
        [FIRST] [LAST]
      </text>
      <panel
       follows="left|top"
       height="120"
       layout="topleft"
       left="10"
       name="lifes_images_panel"
       top_pad="10"
       width="265">
          <panel
           height="120"
           layout="topleft"
           left="0"
           name="second_life_image_panel"
           top="0"
           width="125">
              <text
               type="string"
               length="1"
               follows="left|top|right|bottom"
               font="SansSerifBold"
               height="20"
               layout="topleft"
               left="0"
               name="second_life_photo_title_text"
               text_color="white"
               top="0"
               width="125">
                  Second Life photo:
              </text>
              <texture_picker
               allow_no_texture="true"
               default_image_name="None"
               follows="top|left"
               height="105"
               layout="topleft"
               left="0"
               name="2nd_life_pic"
               top_pad="5"
               width="105" />
          </panel>
          <panel
           height="120"
           layout="topleft"
           left_pad="0" 
           name="first_life_image_panel"
           top="0"
           width="125">
              <text
               type="string"
               length="1"
               follows="left|top|right|bottom"
               font="SansSerifBold"
               height="20"
               layout="topleft"
               left="0"
               name="real_world_photo_title_text"
               text_color="white"
               top="0"
               width="125">
                  Real World photo:
              </text>
              <texture_picker
               allow_no_texture="true"
               default_image_name="None"
               follows="top|left"
               height="105"
               layout="topleft"
               left="0"
               name="real_world_pic"
               top_pad="5"
               width="105" />
          </panel>
          <icon
           height="16"
           image_name="image_edit_icon.tga"
           layout="topleft"
           left="75"
           name="2nd_life_edit_icon"
           tool_tip="Click to select an image" 
           top="35"
           width="16" />
          <icon
           height="16"
           image_name="image_edit_icon.tga"
           layout="topleft"
           left="200"
           name="real_world_edit_icon"
           tool_tip="Click to select an image" 
           top="35"
           width="16" />
      </panel>
      <text
       type="string"
       length="1"
       follows="left|top"
       font="SansSerifBold"
       height="15"
       layout="topleft"
       left="9"
       name="title_sl_descr_text"
       text_color="white"
       top_pad="10" 
       width="250">
          Second Life description:
      </text>
      <text_editor
       type="string"
       length="1"
       follows="left|top|right"
       font="SansSerifSmall"
       height="120"
       layout="topleft"
       left="9"
       name="sl_description_edit"
       text_color="0.1 0.1 0.1 1"
       width="265"
       word_wrap="true">
      </text_editor>
      <text
       type="string"
       length="1"
       follows="left|top"
       font="SansSerifBold"
       height="15"
       layout="topleft"
       left="9"
       name="title_rw_descr_text"
       text_color="white"
       top_pad="10"
       width="250">
          Real World description:
      </text>
      <text_editor
       type="string"
       length="1"
       follows="left|top|right"
       font="SansSerifSmall"
       height="120"
       layout="topleft"
       left="9"
       name="fl_description_edit"
       text_color="0.1 0.1 0.1 1"
       width="265"
       word_wrap="true">
      </text_editor>
      <text
       type="string"
       length="1"
       follows="left|top"
       font="SansSerifBold"
       height="15"
       layout="topleft"
       left="9"
       name="title_homepage_text"
       text_color="white"
       top_pad="10"
       width="100">
          Homepage:
      </text>
      <line_editor
       follows="left|top|right"
       font="SansSerif"
       font.style="UNDERLINE"
       height="20"
       layout="topleft"
       left="9"
       name="homepage_edit"
       text_color="0.2 0.2 1 1"
       width="265">
          TODO
      </line_editor>
      <check_box
       follows="left|top"
       font="SansSerifBold"
       label="Show me in Search results" 
       layout="topleft"
       left="9"
       name="show_in_search_checkbox"
       height="16"
       text_enabled_color="white"
       top_pad="10" 
       width="250"/>
    </panel>
    <panel      
       follows="bottom|right"
       height="30"
       left="10"
       name="profile_me_buttons_panel"
       top_pad="8"
       width="250">
        <button
         follows="bottom|right"
         font="SansSerifSmallBold"
         height="25"
         label="Save Changes"
         layout="topleft"
         left="0"
         name="save_btn"
         top="0"
         width="130" />
        <button
         follows="bottom|right"
         font="SansSerifSmallBold"
         height="25"
         label="Cancel"
         layout="topleft"
         right="-1"
         name="cancel_btn"
         top_delta="0"
         width="105" />
    </panel>
</panel>
