        layout="topleft"
        bottom="390"
        left="0"
        width="280"
        height="30"
        follows="left|right|bottom"
        background_visible="true"
        bevel_style="in"
        label="bottom_panel"
        name="bottom_panel">
        <button
          name="gear_btn"
          enabled="false"
