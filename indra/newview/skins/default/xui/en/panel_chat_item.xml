<!-- All our XML is utf-8 encoded. -->
<panel
  name="instant_message"
  width="300"
  height="180"
  follows="all">
	<panel
	 width="290"
	 height="24"
	 background_visible="true"
	 background_opaque="false"
	 bg_alpha_color="Black"
	 left="5"
	 name="msg_caption">
		<avatar_icon
         follows="left"
         height="18"
         image_name="Generic_Person"
         layout="topleft"
         left="3"
         mouse_opaque="true"
         name="avatar_icon"
         top="3"
         width="18" />
    	<text
		 font.style="BOLD"
		 height="12"
	     layout="topleft"
	     left_pad="5"
	     top="7"
		 text_color="white"
		 word_wrap="false"
		 use_ellipses="true"
		 mouse_opaque="true"
		 name="sender_name"
		 width="150">
	      Jerry Knight
    	</text>
