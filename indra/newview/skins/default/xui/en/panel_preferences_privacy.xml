<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="left|top|right|bottom"
 height="408"
 label="Communication"
 layout="topleft"
 left="102"
 name="im"
 top="1"
 width="517">
    <panel.string
     name="log_in_to_change">
        log in to change
    </panel.string>
    <button
     follows="left|bottom"
     height="23"
     label="Clear History"
     tool_tip="Clear login image, last location, teleport history, web, and texture cache"
     layout="topleft"
     left="30"
     name="clear_cache"
     top="1"
     width="145">
        <button.commit_callback
         function="Pref.WebClearCache" />
    </button>
    <text
     type="string"
     length="1"
     follows="left|top"
     height="10"
     layout="topleft"
     left_pad="10"
     mouse_opaque="false"
     name="cache_size_label"
     top_delta="35"
     text_color="LtGray_50"
     width="300">
       (Locations, images, web, search history)
    </text>
    
    
    <check_box
	 height="16"
     enabled="true"
     label="Publish my avatar in search listings"
     layout="topleft"
     left="30"
     name="online_searchresults"
     top_pad="20"
     width="350" />
    <check_box
	 height="16"
	 enabled="false"
     label="Only friends and groups know I'm online"
     layout="topleft"
     left="30"
     name="online_visibility"
     top_pad="4"
     width="350" />
     
    <check_box
     control_name="VoiceCallsFriendsOnly"
     height="16"
     label="Only friends and groups can call or IM me"
     layout="topleft"
     left="30"
     name="voice_call_friends_only_check"
     top_pad="4"
     width="350" />
     
    <check_box
     enabled_control="EnableVoiceChat"
     control_name="AutoDisengageMic"
     height="16"
     label="Switch off microphone when ending calls"
     layout="topleft"
     left="30"
     name="auto_disengage_mic_check"
     top_pad="4"
     width="350" />
     
    <check_box
     control_name="PrivateLookAtTarget"
     height="16"
     label="Don't send my actual camera target hints to others"
     layout="topleft"
     left="30"
     name="privatelookat"
     top_pad="4"
     width="350" />
     
    <check_box
     control_name="PrivateLocalLookAtTarget"
     height="16"
     label="Don't show any camera target hints even on my own screen."
     layout="topleft"
     left="30"
     name="privatelookat"
     top_pad="4"
     width="400" />
  
    <check_box
     control_name="PrivatePointAtTarget"
     height="16"
     label="Don't send my selection target hints"
     layout="topleft"
     left="30"
     name="privatepointat"
     top_pad="4"
     width="350" />

	 <check_box
     control_name="AutoAcceptNewInventory"
     height="16"
     label="Auto Accept New Inventory Items"
     layout="topleft"
     left="30"
     name="Auto_Accept_New_Inventory"
     top_pad="4"
     width="350" />
   
    <check_box
     control_name="ShowFavoritesOnLogin"
     enabled="false" 
     label="Show my Favorite Landmarks at Login (via &apos;Start At&apos; drop-down menu)"
     layout="topleft"
     left="30"
     name="favorites_on_login_check"
     top_pad="4"
     height="16"
     width="350" /> 
     
	<text
     type="string"
     length="1"
     follows="left|top"
     height="10"
     layout="topleft"
     left="30"
     mouse_opaque="false"
     name="Logs:"
     top_pad="20"
     width="350">
        Chat Logs:
    </text>
    <check_box
	 enabled="false"
     control_name="LogNearbyChat"
     height="16"
     label="Save nearby chat logs on my computer (may cause lag)"
     layout="topleft"
     left="30"
     name="log_nearby_chat"
     top_pad="10"
     width="350">
    </check_box>
    <check_box
	 enabled="false"
     control_name="LogInstantMessages"
     height="16"
     label="Save IM logs on my computer"
     layout="topleft"
     left="30"
     name="log_instant_messages"
     top_pad="4"
     width="350">
    </check_box>
    <check_box
     control_name="LogTimestamp"
	 enabled="false"
     height="16"
     label="Add timestamp to each line in chat log"
     layout="topleft"
     left_delta="0"
     name="show_timestamps_check_im"
     top_pad="4"
     width="237" />
    <check_box
     control_name="FSSecondsinChatTimestamps"
     height="16"
     label="Show seconds in chat and log timestamps"
     layout="topleft"
     left_delta="0"
     name="seconds_in_timestamps"
     top_pad="4"
     width="237" />
    <check_box
     control_name="FSHideTimestampsNearbyChat"
     height="16"
     label="Hide timestamp in Nearby Chat"
     layout="topleft"
     left_delta="0"
     name="hide_timestamps_nearby_chat"
     top_pad="4"
     width="237" />
	<check_box
     control_name="LogFileNamewithDate"
     enabled="false"
     height="16"
     label="Add datestamp to log file name."
     layout="topleft"
     left_delta="0"
     name="logfile_name_datestamp"
     top_pad="4"
     width="350"/>

    <button
     follows="left|bottom"
     height="23"
     label="Manage Block / Mute list"
     layout="topleft"
     left="30"
     name="block_list"
     top_pad="-10"
     width="255">
        <!--<button.commit_callback
         function="SideTray.ShowPanel"-->
      <button.commit_callback
         function="Pref.BlockList"/>
    </button>
    </panel>
