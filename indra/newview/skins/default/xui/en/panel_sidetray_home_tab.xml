<panel
  name="home_tab"
  title="home_tab"
  visible="true"
  width="300"
  height="420"
  background_opaque="false"
  background_visible="true"
  bevel_style="in"
  follows="left|top|right|bottom">
		<panel 
			left="10" width="280" height="130" 
			background_visible="true" 
			background_opaque="false" 
