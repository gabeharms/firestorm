<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
  positioning="centered"
  legacy_header_height="18"
  background_visible="true"
  show_title="true"
  follows="all"
  height="350"
  layout="topleft"
  left="0"
  name="panel_im"
  top="0"
  can_dock="false"
  can_minimize="true"
  can_close="true"
  visible="false"
  width="394"
  can_resize="true"
  min_width="250"
  save_rect="true"
  min_height="150">
  
  <layout_stack
    border_size="0"
    animate="false"
    follows="top|left"
    clip="false"
    height="27"
    right="-3"
    left_pad="0"
    layout="topleft"
    orientation="horizontal"
    name="ls_control_panel"
    top="13"
    left="3">
    <layout_panel
      auto_resize="false"
      user_resize="false"
      name="slide_panel"
      top="0"
      layout="topleft"
      height="24"
      width="40"
      follows="left|top">
       <button
        height="20"
        follows="left|top"
        top="0"
        left="5"
        image_overlay="TabIcon_Open_Off"
        layout="topleft"
        width="24"
        name="slide_left_btn" />
      <button
       height="20"
       follows="left|top"
       top="0"
       left="5"
       image_overlay="TabIcon_Close_Off"
       width="24"
       name="slide_right_btn" />
    </layout_panel>
    
    <layout_panel
      name="gprofile_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="24"
      width="27"
      follows="left|top">
       <button
        name="group_info_btn"
        follows="left|top"
        top="0"
        height="20"
        width="24"
        left_delta="5"
        image_overlay="profile_icon_24x24"
        image_pressed="PushButton_Press"
        image_pressed_selected="PushButton_Selected_Press"
        image_selected="PushButton_Selected_Press"
        tool_tip="Show this group's profile">
         <button.commit_callback
          function="IMSession.Menu.Action"
          parameter="group_info"/>
        </button>
    </layout_panel>
    
    <layout_panel
      name="profile_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="24"
      width="27"
      follows="left|top">
      <button
       name="view_profile_btn"
       follows="left|top"
       top="0"
       height="20"
       width="24"
       left_delta="5"
       image_overlay="profile_icon_24x24"
       image_pressed="PushButton_Press"
       image_pressed_selected="PushButton_Selected_Press"
       image_selected="PushButton_Selected_Press"
       tool_tip="Show this resident's profile">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="show_profile"/>
      </button>
    </layout_panel>
    
    <layout_panel
      name="friend_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="24"
      width="27"
      follows="left|top">
      <button
       follows="left|top"
       height="20"
       top="0"
       left_delta="5"
       image_overlay="friends_icon_24x24"
       image_pressed="PushButton_Press"
       image_pressed_selected="PushButton_Selected_Press"
       image_selected="PushButton_Selected_Press"
       tool_tip="Add this resident as a friend"
       name="add_friend_btn"
       width="24">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="add_friend"/>
      </button>
    </layout_panel>
    
    <layout_panel
      name="tp_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="24"
      width="33"
      follows="left|top">
      <menu_button
       menu_filename="menu_fs_im_teleport.xml"
       follows="top|left"
       height="20"
       image_overlay="teleport_menu"
       image_pressed="PushButton_Press"
       image_pressed_selected="PushButton_Selected_Press"
       image_selected="PushButton_Selected_Press"
       layout="topleft"
       left_delta="5"
       name="teleport_btn"
       tool_tip="Offer or request a teleport"
       top="0"
       width="31" />
    </layout_panel>

    <layout_panel
      name="share_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="24"
      width="27"
      follows="left|top">
      <button
       follows="left|top"
       top="0"
       height="20"
       left_delta="5"
       image_overlay="gift_icon_24x24"
       image_pressed="PushButton_Press"
       image_pressed_selected="PushButton_Selected_Press"
       image_selected="PushButton_Selected_Press"
       tool_tip="Send an item to this resident"
       name="share_btn"
       width="24">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="share"/>
      </button>
    </layout_panel>
    
    <layout_panel
      name="pay_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="24"
      width="27"
      follows="left|top">
      <button
       follows="left|top"
       top="0"
       height="20"
       left_delta="5"
       image_overlay="sale_icon_24x24"
       image_pressed="PushButton_Press"
       image_pressed_selected="PushButton_Selected_Press"
       image_selected="PushButton_Selected_Press"
       tool_tip="Send money to this resident"
       name="pay_btn"
       width="24">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="pay"/>
      </button>
    </layout_panel>
    
    <layout_panel
      name="call_btn_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="24"
      width="27"
      follows="left|top">
      <button
       follows="left|top"
       height="20"
       left_delta="5"
       image_overlay="call_icon_24x24"
       image_pressed="PushButton_Press"
       image_pressed_selected="PushButton_Selected_Press"
       image_selected="PushButton_Selected_Press"
       tool_tip="Add a voice to this chat"
       name="call_btn"
       top="0"
       width="24">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="call"/>
      </button>
    </layout_panel>
    
    <layout_panel
      name="end_call_btn_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="24"
      width="27"
      follows="left|top">
      <button
       follows="left|top"
       height="20"
       left_delta="5"
       image_overlay="call_end_icon_24x24"
       image_pressed="PushButton_Press"
       image_pressed_selected="PushButton_Selected_Press"
       image_selected="PushButton_Selected_Press"
       tool_tip="End Voice Call"
       name="end_call_btn"
       top="0"
       width="24">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="end_call"/>
      </button>
    </layout_panel>
    
    <layout_panel
      name="voice_ctrls_btn_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="24"
      width="27"
      follows="left|top">
      <button
       follows="left|top"
       height="20"
       left_delta="5"
       image_pressed="PushButton_Press"
       image_pressed_selected="PushButton_Selected_Press"
       image_selected="PushButton_Selected_Press"
       tool_tip="Voice Properties"
       image_overlay="VoicePTT_Off"
       name="voice_ctrls_btn"
       top="0"
       width="24">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="volume"/>
      </button>
    </layout_panel>
    
    <layout_panel
      name="im_history_btn_panel"
      auto_resize="false"
      user_resize="false"
      top="0"
      layout="topleft"
      height="24"
      width="27"
      follows="left|top">
      <button
       follows="left|top"
       height="20"
       left_delta="5"
       image_pressed="PushButton_Press"
       image_pressed_selected="PushButton_Selected_Press"
       image_selected="PushButton_Selected_Press"
       tool_tip="Open this conversation's past transcripts."
       image_overlay="Chat_History"
       name="im_history_btn"
       top="0"
       width="25">
        <button.commit_callback
         function="IMSession.Menu.Action"
         parameter="history"/>
      </button>
    </layout_panel>

    <layout_panel
     name="send_sysinfo_btn_panel"
     auto_resize="false"
     user_resize="false"
     top="0"
     layout="topleft"
     height="24"
     width="27"
     follows="left|top">
     <button
     follows="left|top"
     height="20"
     left_delta="5"
     image_pressed="Info_Press"
     image_pressed_selected="PushButton_Selected_Press"
     image_selected="PushButton_Selected_Press"
     tool_tip="Send system info"
     image_overlay="Info_Off"
     name="send_sysinfo_btn"
     top="0"
     width="25" />
  </layout_panel>
  </layout_stack>

  <!-- Checkbox for FS prefix on support groups -->
  <check_box
   control_name="FSSupportGroupChatPrefix2"
   follows="right|top"
   height="18"
   label="Specify version"
   layout="topleft"
   top_delta="9"
   left_delta="246"
   name="FSSupportGroupChatPrefix_toggle"
   tool_tip="Adds your current viewer version and skin information to the front of messages sent by you to this group which will assist support staff in correctly diagnosing your issues and improve accuracy in answering your questions"
   width="135" />
  <!-- END: FS Prefix -->

  <layout_stack
    animate="false"
    follows="all"
    height="308"
    width="394"
    layout="topleft"
    orientation="horizontal"
    name="im_panels"
    top="40"
    left="0">
    <layout_panel
      name="im_control_panel_holder"
      min_width="115"
      width="150"
      height="320"
      auto_resize="false"
      user_resize="true">
      <panel
      name="panel_im_control_panel"
      layout="topleft"
      height="320"
      width="150"
      follows="all"/>
    </layout_panel>
    <layout_panel
      name="panel_im_control_lp"
      left="0"
      top="0"
      bottom="-1"
      right="0"
      user_resize="true">
      <layout_stack
        animate="false"
        follows="all"
        height="304"
        width="394"
        layout="topleft"
        orientation="vertical"
        name="im_panels"
        top="4"
        left="0"
        right="0">
        <layout_panel
          name="chat_holder">
          <fs_chat_history
          font="SansSerifSmall"
          follows="all"
          name="chat_history"
          parse_highlights="true"
          parse_urls="true"
          right="-4"
          left="4"
          top="0"
          bottom="-1" />
        </layout_panel>
        <layout_panel
          top_delta="0"
          top="0"
          height="26"
          bottom="-1"
          auto_resize="false"
          name="chat_layout_panel">
          <layout_stack
            animate="false"
            default_tab_group="2"
            follows="all"
            orientation="horizontal"
            name="input_panels"
            top="0"
            bottom="-2"
            left="0"
            right="-1">
            <layout_panel
              name="input_editor_layout_panel"
              auto_resize="true"
              user_resize="false"
              top="0"
              bottom="-1">
              <chat_editor
              layout="topleft"
              expand_lines_count="5"
              follows="left|right|bottom"
              font="SansSerifSmall"
              height="20"
              is_expandable="true"
              text_tentative_color="TextFgTentativeColor"
              name="chat_editor"
              max_length="3070"
              spellcheck="true"
              tab_group="3"
              top="1"
              bottom="-1"
              left="4"
              right="-2"
              wrap="true" />
            </layout_panel>
            <!-- Not added yet, if ever [FS:CR]
            <layout_panel
              auto_resize="false"
              user_resize="false"
              name="input_button_layout_panel"
              width="30"
              top="0"
              bottom="-1">
              <button
              layout="topleft"
              left="1"
              right="-1"
              top="1"
              height="22"
              follows="left|right|top"
              image_hover_unselected="Toolbar_Middle_Over"
              image_overlay="Conv_expand_one_line"
              image_selected="Toolbar_Middle_Selected"
              image_unselected="Toolbar_Middle_Off"
              name="minz_btn"
              tool_tip="Shows/hides message panel" />
            </layout_panel>-->
          </layout_stack>
        </layout_panel>
      </layout_stack>
    </layout_panel>
  </layout_stack>
</floater>
