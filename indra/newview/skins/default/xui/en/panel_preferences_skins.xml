<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="left|top|right|bottom"
 height="408"
 label="Skins"
 layout="topleft"
 left="102"
 name="skin_panel"
 top="1"
 width="517">

   <text
     type="string"
     length="1"
     follows="left|top"
     height="15"
     layout="topleft"
     left="30"
     name="skin_textbox"
     top="10"
     width="400">
        Skin :
    </text>
    <combo_box
     follows="left|top"
     height="23"
     layout="topleft"
     left="50"
     max_chars="135"
     name="skin_combobox"
     width="200">
    </combo_box>
    <text
     font="SansSerifSmall"
     type="string"
     text_color="White_50"
     length="1"
     follows="left|top"
     height="18"
     layout="topleft"
     left_pad="10"
     name="skin_textbox2"
     width="200">
        (Requires restart)
    </text>

    <text
     type="string"
     length="1"
     follows="left|top"
     height="15"
     layout="topleft"
     left="30"
     top_pad="15"
     name="theme_textbox"
     width="200">
        Colour scheme :
    </text>
    <combo_box
     follows="left|top"
     height="23"
     layout="topleft"
     left="50"
     name="theme_combobox"
     width="200">
    </combo_box>
    <text
     font="SansSerifSmall"
     type="string"
     text_color="White_50"
     length="1"
     follows="left|top"
     height="18"
     layout="topleft"
     left_pad="10"
     name="theme_textbox2"
     width="200">
        (Requires restart)
    </text>
	
	<check_box
     control_name="UseLegacyCursors"
     follows="left|top"
     height="16"
     initial_value="true"
     label="Use Viewer 1 style cursors"
     layout="topleft"
     left="30"
     top_pad="20"
     name="use _legacy_cursors"
     width="200" />
    <text
     font="SansSerifSmall"
     type="string"
     text_color="White_50"
     length="1"
     follows="left|top"
     height="18"
     layout="topleft"
     left_pad="30"
     name="theme_textbox2"
     width="200">
        (Requires restart)
    </text>

</panel>
