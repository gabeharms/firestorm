         label="Undo"
         layout="topleft"
         name="Undo"
         shortcut="control|Z">
          <menu_item_call.on_click
           function="Edit.Undo" />
          <menu_item_call.on_enable
           function="Edit.EnableUndo" />
        </menu_item_call>
        <menu_item_call
         label="Redo"
         layout="topleft"
