<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="false"
 follows="top|left|right|bottom"
 top="0"
 left="0"
 height="100"
     width="265"
 name="picture_item">
    <texture_picker
     allow_no_texture="true"
     default_image_name="None"
     enabled="false"
     follows="left|top"
     height="100"
     width="100"
     layout="topleft"
     left="10"
     bottom_pad="10"
     mouse_opaque="false"
     name="picture"
     tab_stop="false"
     top="10" />
    <text
     follows="top|left|right"
     font="SansSerifTiny"
     height="16"
     layout="topleft"
     left="120"
     name="picture_name"
     top="10"
     text_color="white"
     use_ellipses="true"
     width="120" />
    <text
     follows="top|left|right"
     font="SansSerifTiny"
     height="60"
     width="140"
     top_pad="0"
     layout="topleft"
     name="picture_descr"
     use_ellipses="true"
     word_wrap="true" />
    <button
     follows="top|right"
     height="16"
     image_selected="Info"
     image_unselected="Info"
     layout="topleft"
     name="info_chevron"
     picture_style="true"
     tab_stop="false"
     top="6"
     left="233"
     width="16" />
</panel>
