<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<context_menu
      layout="topleft"
      name="Toolbars Popup"
      tear_off="true"
      visible="false">
  <menu_item_call label="Remove this button"
                  layout="topleft"
                  name="Remove button">
    <menu_item_call.on_click function="Toolbars.RemoveSelectedCommand" />
  </menu_item_call>
  <menu_item_separator layout="topleft" />
  <menu_item_call label="Toolbar buttons..."
                  layout="topleft"
                  name="Choose Buttons">
    <menu_item_call.on_click function="Floater.Show"
                             parameter="toybox" />
  </menu_item_call>
  <menu_item_separator layout="topleft" />
  <menu_item_check label="Left Aligned"
                   layout="topleft"
                   name="left_aligned">
    <on_click function="Toolbars.SetAlignment"
              parameter="left" />
    <on_check function="Toolbars.CheckAlignment"
              parameter="left" />
  </menu_item_check>
  <menu_item_check label="Center Aligned"
                   layout="topleft"
                   name="center_aligned">
    <on_click function="Toolbars.SetAlignment"
              parameter="center" />
    <on_check function="Toolbars.CheckAlignment"
              parameter="center" />
  </menu_item_check>
  <menu_item_check label="Right Aligned"
                   layout="topleft"
                   name="right_aligned">
    <on_click function="Toolbars.SetAlignment"
              parameter="right" />
    <on_check function="Toolbars.CheckAlignment"
              parameter="right" />
  </menu_item_check>
  <menu_item_separator layout="topleft" />
  <menu_item_check label="Icons and labels"
                   layout="topleft"
                   name="icons_with_text">
    <on_click function="Toolbars.EnableSetting"
              parameter="icons_with_text" />
    <on_check function="Toolbars.CheckSetting"
              parameter="icons_with_text" />
  </menu_item_check>
  <menu_item_check label="Icons only"
                   layout="topleft"
                   name="icons_only">
    <on_click function="Toolbars.EnableSetting"
              parameter="icons_only" />
    <on_check function="Toolbars.CheckSetting"
              parameter="icons_only" />
  </menu_item_check>
  <menu_item_check label="Labels only"
                   layout="topleft"
                   name="text_only">
    <on_click function="Toolbars.EnableSetting"
              parameter="text_only" />
    <on_check function="Toolbars.CheckSetting"
              parameter="text_only" />
  </menu_item_check>
  <menu_item_separator layout="topleft" />
  <menu_item_check label="Autosize Buttons"
                   layout="topleft"
                   name="layout_style_none">
    <on_click function="Toolbars.SetLayoutStyle"
              parameter="none" />
    <on_check function="Toolbars.CheckLayoutStyle"
              parameter="none" />
  </menu_item_check>
  <menu_item_check label="Fixed Size Buttons"
                   layout="topleft"
                   name="layout_style_equalize">
    <on_click function="Toolbars.SetLayoutStyle"
              parameter="equalize" />
    <on_check function="Toolbars.CheckLayoutStyle"
              parameter="equalize" />
  </menu_item_check>
  <menu_item_check label="Buttons Fill Bar"
                   layout="topleft"
                   name="layout_style_fill">
    <on_click function="Toolbars.SetLayoutStyle"
              parameter="fill" />
    <on_check function="Toolbars.CheckLayoutStyle"
              parameter="fill" />
  </menu_item_check>
</context_menu>
