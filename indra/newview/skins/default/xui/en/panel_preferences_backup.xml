<?xml version="1.0" encoding="UTF-8"?>
<panel
 border="true"
 follows="all"
 height="440"
 layout="topleft"
 left="1"
 top="1"
 width="540"
 label="Backup"
 name="backup">

    <text
     name="backup_path_label"
     layout="topleft"
     follows="left|top"
     top="20"
     left="30"
     width="80"
     height="20">
Backup Path:
    </text>

    <line_editor
     name="settings_backup_path"
     control_name="SettingsBackupPath"
     layout="topleft"
     follows="left|right|top"
     left_pad="8"
     right="-120"
     height="20"/>

    <button
     layout="topleft"
     left_pad="10"
     follows="right|top"
     height="20"
     label="Set"
     name="set_backup_settings_path"
     width="80" >
        <button.commit_callback
         function="Pref.SetBackupSettingsPath" />
    </button>

    <layout_stack
     name="ls_account_specific_label"
     follows="top|left|right"
     height="150"
     orientation="vertical"
     top_pad="10"
     left="30"
     right="-30"
     layout="topleft">

    <layout_panel
     name="lp_account_specific_label"
     follows="all"
     left="1"
     right="-1"
     height="50"
     user_resize="false"
     auto_resize="false"
     layout="topleft"
     invisibility_control="PerAccountSettingsFile">

    <text
     name="account_specific_label"
     follows="all"
     layout="topleft"
     left="0"
     right="-1"
     top="0"
     word_wrap="true"
     height="50">
You are currently logged out. Be aware that your account specific settings can only be backed up and restored when you are logged in. However, settings that apply to all user accounts can be backed up without being logged in.
    </text>

    </layout_panel>

    <layout_panel
     name="lp_buttons"
     follows="all"
     left="1"
     right="-1"
     height="100"
     user_resize="false"
     auto_resize="true"
     layout="topleft">

    <button
     enabled_control="SettingsBackupPath"
     layout="topleft"
     top_pad="5"
     follows="left|top"
     height="20"
     label="Backup Settings"
     left="50"
     name="backup_settings"
     width="120" >
        <button.commit_callback
         function="Pref.BackupSettings" />
    </button>

    <button
     enabled_control="SettingsBackupPath"
     layout="topleft"
     right="-50"
	 top_delta="0"
     follows="left|top"
     height="20"
     label="Restore Settings"
     name="restore_settings"
     width="120" >
        <button.commit_callback
         function="Pref.RestoreSettings" />
    </button>

    </layout_panel>
    </layout_stack>

    <!-- Enable only for debugging of show/hide warning text
    <check_box
     label="Hide Warning"
     layout="topleft"
     follows="top|left"
     top="-20"
     width="100"
     height="16"
     name="Debug Show/Hide - Don't use in production"
     control_name="PerAccountSettingsFile" />
    -->
</panel>
