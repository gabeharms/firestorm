<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 legacy_header_height="18"
 can_resize="true"
 height="300"
 layout="topleft"
 min_height="300"
 min_width="400"
 name="inspect"
 help_topic="inspect"
 save_rect="true"
 title="Изучение объектов"
 width="400">
    <floater.string
     name="timeStamp">
        [wkday,datetime,local] [mth,datetime,local] [day,datetime,local] [hour,datetime,local]:[min,datetime,local]:[second,datetime,local] [year,datetime,local]
    </floater.string>
    <scroll_list
     bottom="268"
     column_padding="0"
     draw_heading="true"
     follows="top|right|left|bottom"
     layout="topleft"
     left="10"
     name="object_list"
     right="-10"
     tool_tip="Выберите объект в этом списке, чтоб подсветить его"
     top="20">
        <scroll_list.columns
         dynamic_width="true"
         label="Имя объекта"
         name="object_name" />
        <scroll_list.columns
         dynamic_width="true"
         label="Владелец объекта"
         name="owner_name" />
        <scroll_list.columns
         dynamic_width="true"
         label="Имя создателя"
         name="creator_name" />
        <scroll_list.columns
         label="Дата создания"
         name="creation_date"
         width="150" />
		 <scroll_list.commit_callback
		   function="Inspect.SelectObject" />
    </scroll_list>
    <button
     follows="left|bottom"
     height="23"
     label="Смотреть профиль владельца..."
     layout="topleft"
     left_delta="-1"
     name="button owner"
     tool_tip="Смотреть профиль владельца подсвеченного объекта"
     top_pad="4"
     width="150">
		<button.commit_callback
		function="Inspect.OwnerProfile" />
	</button>
    <button
     follows="left|bottom"
     height="23"
     label="Смотреть профиль создателя..."
     layout="topleft"
     left_pad="5"
     name="button creator"
     tool_tip="Смотреть профиль создателя подсвеченного объекта"
     top_delta="0"
     width="150">
		<button.commit_callback
		function="Inspect.CreatorProfile" />
	</button>
</floater>
