     width="237"/>
    <check_box
     control_name="QAMode"
     follows="top|left"
     height="15"
     label="Показать меню разработчика"
     layout="topleft"
     left="30"
     name="show_develop_menu_check"
     top_pad="5"
     width="237"/>         
     
