     width="237"/>
    <check_box
     control_name="UseDebugMenus"
     follows="top|left"
     height="15"
     label="Показать дополнительные меню (Используйте на свой страх и риск!)"
     layout="topleft"
     left="30"
     name="show_advanced_menu_check"
