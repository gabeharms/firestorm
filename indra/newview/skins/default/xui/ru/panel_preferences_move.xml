<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="left|top|right|bottom"
 height="408"
 label="Move"
 layout="topleft"
 left="102"
 name="move_panel"
 top="1"
 width="517">
  <icon
     follows="left|top"
     height="18"
     image_name="Cam_FreeCam_Off"
     layout="topleft"
     name="camera_icon"
     mouse_opaque="false"
     visible="true"
     width="18"
     left="30"
     top="10"/>
  <slider
   can_edit_text="true"
   control_name="CameraAngle"
   decimal_digits="2"
   follows="left|top"
   height="16"
   increment="0.025"
   initial_value="1.57"
   layout="topleft"
   label_width="110"
   label="Угол обзора:"
   left_pad="30"
   max_val="2.97"
   min_val="0.17"
   name="camera_fov"
   show_text="false"
   width="240" />
  <slider
   can_edit_text="true"
   control_name="CameraOffsetScale"
   decimal_digits="2"
   follows="left|top"
   height="16"
   increment="0.025"
   initial_value="1"
   layout="topleft"
   label="Расстояние:"
   left_delta="0"
   label_width="110"
   max_val="3"
   min_val="0.5"
   name="camera_offset_scale"
   show_text="false"
   width="240"
   top_pad="5"/>
      <check_box
		control_name="DisableCameraConstraints"
		height="16"
		initial_value="true"
		label="Разрешить большую свободу камере"
		layout="topleft"
		left_delta="0"
		name="DisableCameraConstraints"
		tool_tip="Set this to move your camera beyond its normal bounds and below land level. If you are not good at moving the camera, more of your shots may be at bad angles."
		top_pad="7"
		width="315"/>
  <text
  follows="left|top"
  type="string"
  length="1"
  height="10"
  left="80"
  name="heading2"
  width="300"
  top_pad="5">
   Автоматическая установка позиции для:
  </text>
  <check_box
     control_name="EditCameraMovement"
     height="20"
     follows="left|top"
     label="Режима создания/редактирования"
     layout="topleft"
     left_delta="30"
     name="edit_camera_movement"
     tool_tip="Производить автоматическое позиционирование камеры при входе в режим редактирования и выходе из него"
     width="280"
     top_pad="5" />
  <check_box
   control_name="AppearanceCameraMovement"
   follows="left|top"
   height="16"
   label="Изменения внешности"
   layout="topleft"
   name="appearance_camera_movement"
   tool_tip="Производить автоматическое позиционирование камеры в режиме изменения внешности"
   width="242" />
  <check_box
   control_name="SidebarCameraMovement"
   follows="left|top"
   height="16"
   initial_value="true"
   label="Боковой панели"
   layout="topleft"
   name="appearance_sidebar_positioning"
   tool_tip="Производить автоматическое позиционирование камеры для боковой панели"
   width="242" />

  <icon
	 follows="left|top"
	 height="18"
	 image_name="Move_Walk_Off"
   layout="topleft"
	 name="avatar_icon"
	 mouse_opaque="false"
	 visible="true"
	 width="18"
   top_pad="2"
   left="30" />
  <check_box
   control_name="FirstPersonAvatarVisible"
   follows="left|top"
   height="20"
   label="Показать аватара от 1-го лица"
   layout="topleft"
   left_pad="30"
   name="first_person_avatar_visible"
   width="256" />
  <text
   type="string"
   length="1"
   follows="left|top"
   height="10"
   layout="topleft"
   left_delta="3"
   name=" Mouse Sensitivity"
   top_pad="5"
   width="160">
    Чувствительность мыши:
  </text>
  <slider
   control_name="MouseSensitivity"
   follows="left|top"
   height="15"
   initial_value="2"
   layout="topleft"
   show_text="false"
   left_pad="5"
   max_val="15"
   name="mouse_sensitivity"
   top_delta="-1"
   width="145" />
  <check_box
   control_name="InvertMouse"
   height="16"
   label="Инвертировать"
   layout="topleft"
   left_pad="2"
   name="invert_mouse"
   top_delta="0"
   width="128" />
  
<text
		type="string"
            left="30"
            top_pad="12"
		length="1"
		follows="left|top"
		height="12"
		layout="topleft"
		name="MovementSettings"
		width="188">
			Движение:
		</text>
	
<check_box
   control_name="ArrowKeysAlwaysMove"
   follows="left|top"
   height="20"
   label="Клавиши стрелок всегда перемещают меня"
   layout="topleft"
   left_delta="48"
   name="arrow_keys_move_avatar_check"
   width="237"
   top_pad="10"/>
  <check_box
   control_name="AllowTapTapHoldRun"
   follows="left|top"
   height="20"
   label="Бег после двойного нажатия на клавишу"
   layout="topleft"
   left_delta="0"
   name="tap_tap_hold_to_run"
   width="237"
   top_pad="0"/>
  <check_box
   control_name="AutomaticFly"
   follows="left|top"
   height="20"
   label="Взлететь / Приземлиться при удержании вверх / вниз"
   layout="topleft"
   left_delta="0"
   name="automatic_fly"
   width="237"
   top_pad="0"/>
  <check_box
   control_name="PlayTeleportSound"
   follows="left|top"
   height="20"
   label="Звуковой эффект при телепортации"
   layout="topleft"
   left_delta="0"
   name="PlayTeleportSound"
   width="237"
   top_pad="0"/>
  <check_box
   follows="left|top"
   height="20"
   label="Двойной щелчок для:"
   layout="topleft"
   left_delta="0"
   name="double_click_chkbox"
   width="237"
   top_pad="0">
   <check_box.commit_callback
    function="Pref.CommitDoubleClickChekbox"/>
  </check_box>
  
  <radio_group
     height="20"
     layout="topleft"
     left_delta="17"
     top_pad="2"
     name="double_click_action">
    <radio_item
     height="16"
     label="Телепортации"
     layout="topleft"
     left="0"
     name="radio_teleport"
     top_delta="20"
     width="120" />
    <radio_item
     height="16"
     label="Автопилота"
     left_pad="0"
     layout="topleft"
     name="radio_autopilot"
     top_delta="0"
     width="75" />
    <radio_group.commit_callback
	     function="Pref.CommitRadioDoubleClick"/>
	</radio_group>
	
	<button
 height="23"
 label="Настройки 3D джойстика"
 left="30"
 name="joystick_setup_button"
 top_pad="10"
 width="155">
    <button.commit_callback
     function="Floater.Show"
     parameter="pref_joystick" />
  </button>
</panel>
