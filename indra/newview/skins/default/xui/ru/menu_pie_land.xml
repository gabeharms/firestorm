<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<pie_menu
    layout="topleft"
    name="Land Pie">
    <pie_slice
        label="О земле..."
        name="Place Information...">
        <pie_slice.on_click
            function="Floater.Show"
            parameter="about_land" />
    </pie_slice>
    <pie_slice
        enabled="false"
        label="Создать"
        name="Create">
        <pie_slice.on_click
            function="Land.Build" />
        <pie_slice.on_enable
            function="EnableEdit" />
    </pie_slice>
    <pie_slice
        label="Идти сюда"
        name="Go Here">
        <pie_slice.on_click
            function="GoToObject" />
    </pie_slice>
    <pie_slice
        label="Сесть"
        name="Sit Here">
        <pie_slice.on_click
            function="Land.Sit" />
    </pie_slice>
    <pie_separator />
    <pie_slice
        enabled="false"
        label="Купить доступ"
        name="Land Buy Pass">
        <pie_slice.on_click
            function="Land.BuyPass" />
        <pie_slice.on_enable
            function="Land.EnableBuyPass" />
    </pie_slice>
    <pie_slice
        enabled="false"
        label="Править ландшафт"
        name="Edit Terrain">
        <pie_slice.on_click
            function="Land.Edit" />
        <pie_slice.on_enable
            function="EnableEdit" />
    </pie_slice>
    <pie_slice
        enabled="false"
        label="Купить землю"
        name="Land Buy">
        <pie_slice.on_click
            function="Land.Buy" />
        <pie_slice.on_enable
            function="World.EnableBuyLand" />
    </pie_slice>
</pie_menu>
