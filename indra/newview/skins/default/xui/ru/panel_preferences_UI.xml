<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel label="UI-Настройки" name="Display panel">
<tab_container label="Настройки Файершторм" name="tabs">

	<!--General-->
	<panel label="Основное" name="UI Prefs Panel">
		<text name="UI Size:" width="220">
			Интерфейс пользователя (UI):
		</text>
		<text name="HoverTipText">
			Всплывающие подсказки:
		</text>
