		<check_box label="На земле" tool_tip="Установите, для отображения подсказок на земле." name="ShowLandHoverTips"/>
		<text name="tooltip_textbox">
			Задержка подсказки:
		</text>
		<combo_box name="Tooltipdelay">
			<combo_box.item label="0,7 секунд" name="tt_item1"/>
			<combo_box.item label="1,5 секунды" name="tt_item2"/>
