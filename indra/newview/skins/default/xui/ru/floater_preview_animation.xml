<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 legacy_header_height="18"
 auto_tile="true"
 height="85"
 layout="topleft"
 name="preview_anim"
 help_topic="preview_anim"
 width="280">
    <floater.string
     name="Title">
        Анимация: [NAME]
    </floater.string>
    <text
     type="string"
     length="1"
     follows="left|top"
     font="SansSerif"
     height="19"
     layout="topleft"
     left="10"
     name="desc txt"
     top="25"
     width="80">
        Описание:
    </text>
    <line_editor
     border_style="line"
     border_thickness="1"
     follows="left|top|right"
     font="SansSerifSmall"
     height="19"
     layout="topleft"
     left_delta="95"
     max_length="127"
     name="desc"
     top="19"
     width="170" />
    <button
     height="20"
     label="Запустить всем"
     label_selected="Stop"
     layout="topleft"
     left="10"
     name="Anim play btn"
     tool_tip="Воспроизвести эту анимацию, чтобы другие могли видеть ее"
     top="47"
     width="125" />
    <button
     height="20"
     label="Запустить себе"
     label_selected="Stop"
     layout="topleft"
     left_pad="5"
     name="Anim audition btn"
     tool_tip="Воспроизвести эту анимацию, чтобы ее видели только вы"
     top_delta="0"
     width="125" />
</floater>
