<?xml version="1.0" encoding="utf-8" standalone="yes" ?>

<floater
 legacy_header_height="18"
 header_height="18"
 can_dock="true"
 can_minimize="true"
 can_close="false"
 can_resize="true"
 min_width="124"
 min_height="78"
 follows="bottom"
 height="101"
 layout="topleft"
 name="camera_floater"
 help_topic="camera_floater"
 save_rect="true"
 save_visibility="true"
 save_dock_state="true"
 single_instance="true"
 width="213">
    <floater.string
     name="rotate_tooltip">
        Rotate Camera Around Focus
    </floater.string>
    <floater.string
     name="zoom_tooltip">
        Zoom Camera Towards Focus
    </floater.string>
    <floater.string
     name="move_tooltip">
        Move Camera Up and Down, Left and Right
    </floater.string>
    <floater.string
     name="camera_modes_title">
        Camera modes
    </floater.string>
    <floater.string
     name="pan_mode_title">
       Orbit Zoom Pan
    </floater.string>
    <floater.string
     name="presets_mode_title">
        Preset Views
    </floater.string>
    <floater.string
     name="free_mode_title">
        View Object
    </floater.string>
    <panel
     border="false"
     height="101"
     follows="all"
     layout="topleft"
     left="0"
     top="0"
     mouse_opaque="false"
     name="controls"
     width="213">

    <tab_container
     name="camera_floater_tab_container"
     left="0"
     top="16"
     width="213"
     height="86"
     tab_position="left"
     tab_width="30"
     tab_height="20"
     follows="all">

        <!-- Camera controls panel -->
        <panel
         class="camera_zoom_panel"
         follows="all"
         height="100"
         layout="topleft"
         left="0"
         mouse_opaque="false"
         name="zoom"
         top="0"
         visible="true"
         width="180">

            <!-- Camera joystick controls layout starts here -->
            <layout_stack
             top="4"
             enabled="true"
             height="96"
             left="0"
             mouse_opaque="true"
             name="camera_view_layout_stack"
             orientation="horizontal"
             width="180"
             follows="all">

            <!-- Camera rotate layout panel -->
            <layout_panel
             name="camera_rotate_layout_panel"
             user_resize="false"
             height="78"
             width="78">

            <!-- Fake control icon to simulate the joystick widget -->
            <icon
             follows="all"
             height="78"
             image_name="Cam_Rotate_Out"
             tool_tip="Orbit camera around focus"
             layout="topleft"
             left="0"
             name="icon_cam_rotate_stick"
             scale_image="true"
             sound_flags="3"
             visible="true"
             top="0"
             width="78" />

<!--
              image_selected="Cam_Rotate_In"
              image_unselected="Cam_Rotate_Out"
//-->

            <joystick_rotate
             follows="all"
             height="78"
             image_selected="Blank"
             image_unselected="Blank"
             layout="topleft"
             left="0"
             mouse_opaque="false"
             name="cam_rotate_stick"
             quadrant="left"
             scale_image="true"
             sound_flags="3"
             visible="true"
             tool_tip="Orbit camera around focus"
             top="0"
             width="70" />
            </layout_panel>

            <!-- Camera zoom layout panel -->
            <layout_panel
             name="camera_zoom_layout_panel"
             can_resize="false"
             auto_resize="false"
             user_resize="false"
             height="78"
             width="18">

            <button
             follows="right|top"
             height="18"
             image_disabled="AddItem_Disabled"
             image_selected="AddItem_Press"
             image_unselected="AddItem_Off"
             layout="topleft"
             left="0"
             name="zoom_plus_btn"
             tool_tip="Zoom in"
             width="18"
             top="0">
            <commit_callback
             function="Zoom.plus" />
            <mouse_held_callback
             function="Zoom.plus" />
            </button>
            <slider_bar
             height="42"
             layout="topleft"
             name="zoom_slider"
             orientation="vertical"
             follows="top|right|bottom"
             tool_tip="Zoom camera toward focus"
             top_pad="0"
             min_val="0"
             max_val="1"
             width="18">
            <commit_callback
             function="Slider.value_changed" />
            </slider_bar>
            <button
             follows="bottom|right"
             height="18"
             image_disabled="MinusItem_Disabled"
             image_selected="MinusItem_Press"
             image_unselected="MinusItem_Off"
             layout="topleft"
             name="zoom_minus_btn"
             tool_tip="Zoom out"
             top_pad="0"
             width="18">
            <commit_callback
             function="Zoom.minus" />
            <mouse_held_callback
             function="Zoom.minus" />
            </button>
            </layout_panel>

            <!-- Camera movement layout panel -->
            <layout_panel
             name="panel_track"
             user_resize="false"
             height="78"
             width="78">

            <!-- Fake control icon to simulate the joystick widget -->
            <icon
             follows="all"
             height="78"
             image_name="Cam_Tracking_Out"
             layout="topleft"
             left="0"
             name="icon_cam_track_stick"
             tool_tip="Move camera up and down, left and right"
             scale_image="true"
             sound_flags="3"
             visible="true"
             top="0"
             width="78" />

<!--
         image_selected="Cam_Tracking_In"
         image_unselected="Cam_Tracking_Out"
//-->

            <joystick_track
             follows="all"
             height="78"
             image_selected="Blank"
             image_unselected="Blank"
             layout="topleft"
             left="0"
             name="cam_track_stick"
             quadrant="left"
             scale_image="true"
             sound_flags="3"
             tool_tip="Move camera up and down, left and right"
             top="0"
             visible="true"
             width="78"/>

            </layout_panel>
            </layout_stack>
        </panel>

        <!-- Camera presets panel (Front, side, rear) -->
        <panel
         follows="top|left"
         height="86"
         layout="topleft"
         left_pad="15"
         name="camera_views_and_modes_panel"
         top="16"
         width="200"
         visible="true">

        <panel_camera_item
         name="front_view"
         tool_tip="Switch to Front View"
         follows="top"
         left="5"
         width="26"
         height="26">
        <panel_camera_item.mousedown_callback
         function="CameraPresets.ChangeView"
         parameter="front_view" />
        <panel_camera_item.icon_over
         width="26" />
        <panel_camera_item.icon_selected
         width="26" />
        <panel_camera_item.picture
         image_name="Cam_Preset_Front_Off" />
        <panel_camera_item.selected_picture
         image_name="Cam_Preset_Front_On" />
        <panel_camera_item.text
         text_color="LtYellow"
         width="1"
         left="30"
         name="front_view_text">
        " "
<!--            Front //-->
        </panel_camera_item.text>
        </panel_camera_item>

        <panel_camera_item
         name="group_view"
         tool_tip="Switch to Side View"
         follows="top"
         width="26"
         height="26"
         left_pad="3">
        <panel_camera_item.mousedown_callback
         function="CameraPresets.ChangeView"
         parameter="group_view" />
        <panel_camera_item.icon_over
         width="26" />
        <panel_camera_item.icon_selected
         width="26" />
        <panel_camera_item.picture
         image_name="Cam_Preset_Side_Off" />
        <panel_camera_item.selected_picture
         image_name="Cam_Preset_Side_On" />
        <panel_camera_item.text
         text_color="LtYellow"
         width="1"
         left="30"
         name="side_view_text">
        " "
<!--            Side   -->
        </panel_camera_item.text>
        </panel_camera_item>

        <panel_camera_item
         name="rear_view"
         tool_tip="Switch to Rear View"
         follows="top"
         width="26"
         height="26"
         layout="topleft"
         left_pad="3">
        <panel_camera_item.mousedown_callback
         function="CameraPresets.ChangeView"
         parameter="rear_view" />
        <panel_camera_item.icon_over
         width="26" />
        <panel_camera_item.icon_selected
         width="26" />
        <panel_camera_item.picture
         image_name="Cam_Preset_Back_Off" />
        <panel_camera_item.selected_picture
         image_name="Cam_Preset_Back_On" />
        <panel_camera_item.text
         name="rear_view_text"
         width="1"
         left="30"
         text_color="LtYellow">
        " "
<!--            Rear    -->
        </panel_camera_item.text>
        </panel_camera_item>

        <panel_camera_item
         name="object_view"
         tool_tip="Switch to Object View Mode"
         follows="top"
         width="26"
         height="26"
         layout="topleft"
         left="5"
         top_pad="3">
        <panel_camera_item.mousedown_callback
         function="CameraPresets.ChangeView"
         parameter="object_view" />
        <panel_camera_item.icon_over
         width="26" />
        <panel_camera_item.icon_selected
         width="26" />
        <panel_camera_item.text
         width="1"
         left="30"
         name="object_view_text">
        " "
<!--            Object    -->
        </panel_camera_item.text>
        <panel_camera_item.picture
         image_name="Object_View_Off" />
        <panel_camera_item.selected_picture
         image_name="Object_View_On" />
        </panel_camera_item>

        <panel_camera_item
         name="mouselook_view"
         tool_tip="Switch to Mouselook Mode"
         follows="top"
         layout="topleft"
         width="26"
         left_pad="3">
        <panel_camera_item.mousedown_callback
         function="CameraPresets.ChangeView"
         parameter="mouselook_view" />
        <panel_camera_item.icon_over
         width="26" />
        <panel_camera_item.icon_selected
         width="26" />
        <panel_camera_item.text
         width="1"
         left="30"
         name="mouselook_view_text">
        " "
<!--            Mouselook    -->
        </panel_camera_item.text>
        <panel_camera_item.picture
         image_name="Mouselook_View_Off" />
        <panel_camera_item.selected_picture
         image_name="Mouselook_View_On" />
        </panel_camera_item>
      </panel>
    </tab_container>

    </panel>

    <!-- Fake tab icons -->
    <icon
     height="20"
     follows="top|left"
     label=""
     layout="topleft"
     left="5"
     image_name="Cam_Avatar_Off"
     name="presets_btn"
     tab_stop="false"
     tool_tip="Camera Views and Modes"
     top="20"
     width="25">
    </icon>

    <icon
     height="20"
     follows="top|left"
     label=""
     layout="topleft"
     top_pad="2"
     image_name="PanOrbit_Off"
     name="pan_btn"
     tab_stop="false"
     tool_tip="Orbit Zoom Pan"
     width="25">
    </icon>
</floater>
