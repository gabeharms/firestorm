<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel name="panel_login" >
  <panel.string
       name="create_account_url">
         http://join.secondlife.com/
  </panel.string>
  <panel.string
       name="real_url" translate="false">
         http://phoenixviewer.com/app/loginV3/
  </panel.string>
      <string name="reg_in_client_url" translate="false">
       http://secondlife.eniac15.lindenlab.com/reg-in-client/
  </string>
  <panel.string
       name="forgot_password_url">
         http://secondlife.com/account/request.php
  </panel.string>
  <!-- *NOTE: Custom resize logic for login_html in llpanellogin.cpp -->
  <web_browser name="login_html" />
  <layout_stack name="login_widgets" >
    <layout_panel name="login" width="925" min_width="925" >
      <text name="username_text">
        Имя пользователя:
      </text>
      <combo_box tool_tip="Имя пользователя, которое вы выбрали при регистрации, например bobsmith12 или Steller Sunshine" name="username_combo" >
      <combo_box.combo_button visible ="true"/>
      <combo_box.drop_down_button visible ="true"/>
      </combo_box>
        <button height="23" label="Удалить эту запись" name="delete_saved_login_btn" />
      <text name="password_text" >
        Пароль:
      </text>
      <line_editor name="password_edit" />
      <check_box label="Запомнить пароль"  name="remember_check" />
      <button  label="Войти" name="connect_btn" />
      <text  name="mode_selection_text" >
        Установки по умолчанию: 
      </text>
      <combo_box tool_tip="Выберите стиль клиента с которым вы лучше всего знакомы, чтобы сбросить настройки по умолчанию." name="mode_combo" width="170">
      <combo_box.item name="Phoenix" />
      <combo_box.item name="V3" />
      <combo_box.item label="Гибрид" name="Hybrid" />
      </combo_box>
      <text name="start_location_text" >
        Начать с:
      </text>
      <combo_box name="start_location_combo" >
      <combo_box.item
      label="Последнего места"
      name="MyLastLocation"/>
      <combo_box.item
      label="Дома"
      name="MyHome"/>
      <combo_box.item
      label="&lt;Ввести название региона&gt;" name="Typeregionname" />
      </combo_box>
      <text name="grid_selection_text" width="130">
        Подключиться к сетке:
      </text>
      <combo_box name="server_combo" />
    </layout_panel>
    <layout_panel name="links" >
      <text name="create_new_account_text" >
        Зарегистрироваться
      </text>
      <text name="forgot_password_text" >
        Забыли имя пользователя или пароль?
      </text>
      <text name="login_help" >
        Нужна помощь в регистрации?   
      </text>
    </layout_panel>
  </layout_stack>
</panel>
