<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel label="Основной" name="general_panel">
	<text name="language_textbox">
		Язык:
	</text>
	<combo_box name="language_combobox">
		<combo_box.item label="Системный" name="System Default Language"/>
		<combo_box.item label="English (английский)" name="English"/>
		<combo_box.item label="Dansk (Датский) - Beta" name="Danish"/>
		<combo_box.item label="Deutsch (Немецкий) - Beta" name="Deutsch(German)"/>
		<combo_box.item label="Español (Испанский) - Beta" name="Spanish"/>
		<combo_box.item label="Français (Французский) - Beta" name="French"/>
		<combo_box.item label="Italiano (Итальянский) - Beta" name="Italian"/>
		<combo_box.item label="Nederlands (Голландский) - Beta" name="Dutch"/>
		<combo_box.item label="Polski (Польский) - Beta" name="Polish"/>
		<combo_box.item label="Português (Португальский) - Beta" name="Portugese"/>
		<combo_box.item label="日本語 (Японский) - Beta" name="Japanese"/>
		<combo_box.item label="Русский (Русский) - Beta v2.0" name="Russian"/>
	</combo_box>
	<text name="language_textbox2">
		(перезагрузка)
	</text>
	<text name="maturity_desired_prompt" width="320">
		Я хочу получить доступ к содержимому с рейтингом:
	</text>
	<text name="maturity_desired_textbox" width="200"/>
	<combo_box name="maturity_desired_combobox">
		<combo_box.item label="Генерал, Модерат, Взрослый" name="Desired_Adult"/>
		<combo_box.item label="Генерал и Модерат" name="Desired_Mature"/>
		<combo_box.item label="Генерал" name="Desired_PG"/>
	</combo_box>
	<text name="start_location_textbox">
		Место загрузки:
	</text>
	<combo_box name="start_location_combo">
		<combo_box.item label="Мое последнее место" name="MyLastLocation" tool_tip="Где вы были перед выходом."/>
		<combo_box.item label="Дома" name="MyHome" tool_tip="Старт дома."/>
	</combo_box>
	<check_box initial_value="true" label="Показать в окне входа" name="show_location_checkbox"/>
	<text name="name_tags_textbox">
		Теги имен:
	</text>
	<radio_group name="Name_Tag_Preference">
		<radio_item label="Выкл" name="radio" value="0" width="87"/>
		<radio_item label="Вкл" name="radio2" value="1" width="87"/>
		<radio_item label="Показать кратко" name="radio3" value="2" width="87"/>
	</radio_group>
	<check_box label="Мое имя" name="show_my_name_checkbox1"/>
	<check_box label="Имена пользователей" name="show_slids" tool_tip="Имена пользователей. Пример: Programmtest123" left_pad="75"/>
	<check_box label="Титул в группе" name="show_all_title_checkbox1" tool_tip="Показать титул в группе. Пример: Главный Генерал Группы"/>
	<check_box label="Выделять друзей" name="show_friends" tool_tip="Выделять своих друзей" left_pad="75"/>
	<check_box label="Измененное имя" name="display_names_check" tool_tip="Вкл. измененное имя. Пример: Шашлык Програмович (ЛС,ЧАТ..) "/>
	<check_box label="Показать Viewer" name="show_viewerID" tool_tip="Показывает рядом с именем пользователя используемый Viewer" left_pad="75"/>
	<check_box label="Старый формат" name="FSshow_legacyun" tool_tip="Имя Фамилия в замен имя.фамилия" left_pad="75" />

	<check_box label="Viewer-UI-Tipps aktivieren" name="viewer_hints_check"/>
	<text name="inworld_typing_rg_label">
		Нажатие букв :
	</text>
	<radio_group name="inworld_typing_preference">
		<radio_item label="Писать в чат" name="radio_start_chat" value="0"/>
		<radio_item label="Ходить (как в кс WASD)" name="radio_move" value="1"/>
	</radio_group>
	<text name="title_afk_text" width="180">
		Статус "Отошел" через:
	</text>
	<text name="title_afk_quit_text" width="210">
		Выйти из системы через:
	</text> 
	<combo_box label="Статус 'Отошел' через:" name="afk">
		<combo_box.item label="2 минуты" name="item0"/>
		<combo_box.item label="5 минут" name="item1"/>
		<combo_box.item label="10 минут" name="item2"/>
		<combo_box.item label="30 минут" name="item3"/>
		<combo_box.item label="некогда" name="item4"/>
	</combo_box>
	<combo_box  layout="topleft" left_pad="70" name="quitafk">
		<combo_box.item label="2 минуты" name="item0"/>
		<combo_box.item label="5 минут" name="item1"/>
		<combo_box.item label="10 минут" name="item2"/>
		<combo_box.item label="30 минут" name="item3"/>
		<combo_box.item label="некогда" name="item4"/>
	</combo_box>
	<check_box name="AvatarSitOnAway" label="Сесть, если статус 'Отошел'" left_pad="20"/>
	<text name="text_box3">
		Сообщение автоответчика (для "Занят" и для автоответчика):
	</text>
	<text_editor name="busy_response">
		log_in_to_change
	</text_editor>

    <panel name="general_extras">
        <text name="text_box3">
           Дополнительно:
        </text>
        <check_box name="FSUseWebProfiles" label="Использование Веб профилей" tool_tip="Открыть профиль в браузере"/>

<!-- This option is duplicated here for ease of locating and to replicate LLv3 -->
        <text name="inworld_typing_rg_label">
           Нажатие букв:
        </text>
        <radio_group name="inworld_typing_preference">
            <radio_item label="Писать в чат" name="radio_start_chat"/>
            <radio_item label="Ходить (WASD)" name="radio_move"/>
        </radio_group>

    </panel>
</panel>
