<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="left|top|right|bottom"
 height="408"
 label="Основное"
 layout="topleft"
 left="102"
 name="general_panel"
 top="1"
 width="517">
   <text
     type="string"
     length="1"
     follows="left|top"
     height="15"
     layout="topleft"
     left="30"
     name="language_textbox"
     top="10"
     width="200">
        Язык:
    </text>
    <combo_box
     control_name="Language"
     follows="left|top"
     height="23"
     layout="topleft"
     left="35"
     max_chars="135"
     name="language_combobox"
     width="250">
        <combo_box.item
         enabled="true"
         label="По умолчанию системы"
         name="System Default Language"
         value="default" />
        <combo_box.item
         enabled="true"
         label="English (английский)"
         name="English"
         value="en" />
        <combo_box.item
         enabled="true"
         label="Dansk (Датский) - Beta"
         name="Danish"
         value="da" />
        <combo_box.item
         enabled="true"
         label="Deutsch (Немецкий) - Beta"
         name="Deutsch(German)"
         value="de" />
        <combo_box.item
         enabled="true"
         label="Español (Испанский) - Beta"
         name="Spanish"
         value="es" />
        <combo_box.item
         enabled="true"
         label="Français (Французский) - Beta"
         name="French"
         value="fr" />
        <combo_box.item
         enabled="true"
         label="Italiano (Итальянский) - Beta"
         name="Italian"
         value="it" />
        <combo_box.item
         enabled="true"
         label="Nederlands (Голландский) - Beta"
         name="Dutch"
         value="nl" />
        <combo_box.item
         enabled="true"
         label="Polski (Польский) - Beta"
         name="Polish"
         value="pl" />
        <combo_box.item
         enabled="true"
         label="Português (Португальский) - Beta"
         name="Portugese"
         value="pt" />
        <combo_box.item
         enabled="true"
         label="日本語 (Японский) - Beta"
         name="(Japanese)"
         value="ja" />
		<combo_box.item
         enabled="true"
         label="Русский (Русский) - Beta v2.0"
         name="Russian"
         value="ru" /> 
    </combo_box>
    <text
 font="SansSerifSmall"
     type="string"
     text_color="White_50"
     length="1"
     follows="left|top"
     height="18"
     layout="topleft"
     left_pad="10"
     name="language_textbox2"
     width="200">
        (Требуется перезагрузка)
    </text>
    <text
     type="string"
     length="1"
     follows="left|top"
     height="15"
     layout="topleft"
     left="30"
     top_pad="8"
     name="maturity_desired_prompt"
     width="200">
        Я хочу получить доступ к содержимому с рейтингом:
    </text>
	<text
     type="string"
     length="1"
     follows="left|top"
     height="15"
     layout="topleft"
     left_pad="5"
     name="maturity_desired_textbox"
     width="200">
    </text>
    <combo_box
     control_name="PreferredMaturity"
     follows="left|top"
     height="23"
     layout="topleft"
     left="50"
     name="maturity_desired_combobox"
     width="200">
        <combo_box.item
         label="General, Moderate, Adult"
         name="Desired_Adult"
         value="42" />
        <combo_box.item
         label="General and Moderate"
         name="Desired_Mature"
         value="21" />
        <combo_box.item
         label="General"
         name="Desired_PG"
         value="13" />
        <combo_box.commit_callback
		 function="Pref.MaturitySettings"/>
    </combo_box>
    <icon
     follows="left|top"
     height="16"
     image_name="Parcel_PG_Dark"
     layout="topleft"
     left_pad="5"
     name="rating_icon_general"
     top_delta="3"
     width="18"/>
    <icon
     follows="left|top"
     height="16"
     image_name="Parcel_M_Dark"
     layout="topleft"
     left_pad="2"
     name="rating_icon_moderate"
     width="18"/>
    <icon
     follows="left|top"
     height="16"
     image_name="Parcel_R_Dark"
     layout="topleft"
     left_pad="2"
     name="rating_icon_adult"
     width="18"/>
    <text
     type="string"
     length="1"
     follows="left|top"
     height="15"
     layout="topleft"
     left="30"
     name="start_location_textbox"
     top_pad="8"
     width="394">
        Место загрузки:
    </text>
    <combo_box
     control_name="LoginLocation"
     follows="left|top"
     height="23"
     layout="topleft"
     name="start_location_combo"
     left="35"
     width="150">
        <combo_box.item
         label="Мое последнее место"
         name="MyLastLocation"
         value="last" />
        <combo_box.item
         label="Дома"
         name="MyHome"
         value="home" />
    </combo_box>
    <check_box
     control_name="ShowStartLocation"
     height="16"
     initial_value="true"
     label="Показать в окне входа"
     layout="topleft"
     left_pad="20"
     name="show_location_checkbox"
     top_delta="5"
     width="256" />
   <text
    type="string"
    length="1"
    follows="left|top"
    height="15"
    layout="topleft"
    left="30"
    name="name_tags_textbox"
    top_pad="10"
    width="400">
       Теги имен:
   </text>
   <radio_group
     control_name="AvatarNameTagMode"
     height="20"
     layout="topleft"
     left="35"
     top_pad="0" 
     name="Name_Tag_Preference">
        <radio_item
         label="Выкл"
         name="radio"
         top_delta="20" 
         layout="topleft"
         height="16" 
         left="0" 
         value="0"
         width="75" />
        <radio_item
         label="Вкл"
         left_pad="0"
         layout="topleft"
         top_delta="0" 
         height="16" 
         name="radio2"
         value="1"
         width="75" />
        <radio_item
         label="Показать кратко"
         left_pad="0"
         name="radio3"
         height="16"
         layout="topleft"
         top_delta="0"
         value="2"
         width="160" />
    </radio_group>
    <check_box
	 enabled_control="AvatarNameTagMode"
     control_name="RenderNameShowSelf"
     height="16"
     label="Мое имя"
     layout="topleft"
     left="35"
     name="show_my_name_checkbox1"
	 top_pad="2"
     width="100" />
   <check_box
     control_name="NameTagShowUsernames"
	 enabled_control="AvatarNameTagMode"
     height="16"
     label="Имена пользователей"
     layout="topleft"
     left_pad="50"
     name="show_slids"
     tool_tip="Показать имена пользователей, например bobsmith123"
     top_delta="0" />

        <check_box
        control_name="NameTagShowGroupTitles"
	enabled_control="AvatarNameTagMode"
        height="16"
        label="Роль в группе"
        layout="topleft"
        left="35"
        width="100" 
        name="show_all_title_checkbox1"
	tool_tip="Показать роль в группе, например Officer или Member"
        top_pad="3" />

        <check_box
        control_name="NameTagShowFriends"
        enabled_control="AvatarNameTagMode"
        height="16"
        label="Выделять друзей"
        layout="topleft"
        left_pad="50"
        name="show_friends"
        tool_tip="Выделение имени ваших друзей" />

	<check_box
	control_name="UseDisplayNames"
	follows="top|left"
	height="16"
	label="Измененное имя"
	layout="topleft"
	left="35"
	name="display_names_check"
	width="100"
	tool_tip="Установите, чтоб использовать Измененное имя в чате, ИМ, и т.д."
	top_pad="3">
	<check_box.commit_callback
	function="FS.ToggleSortContacts" />
	</check_box>

        <check_box
        control_name="ShowViewerIDsOnNameTag"
        height="16"
        label="Показать Viewer"
        layout="topleft"
        left_pad="50"
        name="show_viewerID"
        tool_tip="Показывает рядом с именем пользователя используемый Viewer" />

       <check_box
        control_name="EnableUIHints"
        follows="top|left"
        height="16"
        label="Включить отображение подсказок UI"
        layout="topleft"
        left="35"
        name="viewer_hints_check"
        top_pad="5"
        width="237"/>


    <text
      type="string"
      length="1"
      follows="left|top"
      height="13"
      layout="topleft"
      left="30"
      top_pad="10"
      name="title_afk_text"
      top_delta="0" 
      width="150">
    Статус "Отошел" через:
    </text>
    
        <text
      type="string"
      length="1"
      follows="left|top"
      height="13"
      layout="topleft"
      left_pad="5"
      top_delta="0"
      name="title_afk_quit_text" 
      width="190">
    Выйти из системы через:
    </text>
    
    <combo_box
     height="23"
     layout="topleft"
     control_name="AFKTimeout"
     left="25"
     top_pad="10"
     label="Статус 'Отошел' через:"
     top_delta="0"
     name="afk"
     width="120">
    <combo_box.item
     label="2 минуты"
     name="item0"
     value="120" />
    <combo_box.item
     label="5 минут"
     name="item1"
     value="300" />
    <combo_box.item
     label="10 минут"
     name="item2"
     value="600" />
    <combo_box.item
     label="30 минут"
     name="item3"
     value="1800" />
    <combo_box.item
     label="60 минут"
     name="item3"
     value="3600" />
    <combo_box.item
     label="Никогда"
     name="item4"
     value="0" />
  </combo_box>
  
    <combo_box
     height="23"
     layout="topleft"
     control_name="QuitAfterSecondsOfAFK"
     left_pad="30"
     top_delta="0"
     name="quitafk"
     width="120">
    <combo_box.item
     label="2 минуты"
     name="item0"
     value="120" />
    <combo_box.item
     label="5 минут"
     name="item1"
     value="300" />
    <combo_box.item
     label="10 минут"
     name="item2"
     value="600" />
    <combo_box.item
     label="30 минут"
     name="item3"
     value="1800" />
  </combo_box>
  
      <check_box
        control_name="AvatarSitOnAway"
        name="AvatarSitOnAway"
        follows="top|left"
        height="16"
        label="Сесть, если статус 'Отошел'"
        layout="topleft"
        left_pad="50"
        top_delta="5"
        width="50"/>
        
    <text
     type="string"
     length="1"
     follows="left|top"
     height="13"
     layout="topleft"
     left="30"
     mouse_opaque="false"
     name="text_box3"
     top_pad="20"
     width="400">
       Сообщение автоответчика (для "Занят" и для автоответчика):
    </text>
    <text_editor
     control_name="BusyModeResponse"
      use_ellipses="false"
     commit_on_focus_lost = "true"
     follows="left|top"
     height="42"
     layout="topleft"
     left="50"
     top_pad="10"
     name="busy_response"
     width="450"
     word_wrap="true">
       log_in_to_change
    </text_editor>

</panel>
