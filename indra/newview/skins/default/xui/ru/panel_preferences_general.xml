<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel label="Общие" name="general_panel">
	<text name="language_textbox">
		Язык:
	</text>
	<combo_box name="language_combobox">
		<combo_box.item label="Системный" name="System Default Language"/>
		<combo_box.item label="English (английский)" name="English"/>
		<combo_box.item label="Dansk (Датский) - Beta" name="Danish"/>
		<combo_box.item label="Deutsch (Немецкий) - Beta" name="Deutsch(German)"/>
		<combo_box.item label="Español (Испанский) - Beta" name="Spanish"/>
		<combo_box.item label="Français (Французский) - Beta" name="French"/>
		<combo_box.item label="Italiano (Итальянский) - Beta" name="Italian"/>
		<combo_box.item label="Nederlands (Голландский) - Beta" name="Dutch"/>
		<combo_box.item label="Polski (Польский) - Beta" name="Polish"/>
		<combo_box.item label="Português (Португальский) - Beta" name="Portugese"/>
		<combo_box.item label="日本語 (Японский) - Beta" name="Japanese"/>
		<combo_box.item label="Русский (Русский) - Beta v2.0" name="Russian"/>
	</combo_box>
	<text name="language_textbox2">
		(Требуется перезапуск)
	</text>
	<text name="maturity_desired_prompt">
		Показывать контент:
	</text>
	<combo_box name="maturity_desired_combobox">
		<combo_box.item label="Общий, умеренный, для взрослых" name="Desired_Adult"/>
		<combo_box.item label="Общий и умеренный" name="Desired_Mature"/>
		<combo_box.item label="Общий" name="Desired_PG"/>
	</combo_box>
	<text name="start_location_textbox">
		Место старта:
	</text>
	<combo_box name="start_location_combo">
		<combo_box.item label="Мое последнее место" name="MyLastLocation"/>
		<combo_box.item label="Мой дом" name="MyHome"/>
	</combo_box>
	<check_box initial_value="истина" label="Показывать на экране входа" name="show_location_checkbox"/>
	<text name="name_tags_textbox">
		Теги имен:
	</text>
	<radio_group name="Name_Tag_Preference">
		<radio_item label="Выкл." name="radio"/>
		<radio_item label="Вкл." name="radio2"/>
		<radio_item label="Временный показ" name="radio3"/>
	</radio_group>
	<text name="RenderNameShowTime_LabelPrefix">
		(
	</text>
	<text name="RenderNameShowTime_LabelSuffix">
		seconds)
	</text>
	<check_box label="Мое имя" name="show_my_name_checkbox1"/>
	<check_box label="Имена пользователей" name="show_slids" tool_tip="Показывать имя пользователя, например, bobsmith123"/>
	<check_box label="Титулы групп" name="show_all_title_checkbox1" tool_tip="Показывать титулы групп, например, Officer или Member"/>
	<check_box label="Подсветка друзей" name="show_friends" tool_tip="Подсвечивать теги имен ваших друзей"/>
	<check_box label="Экранные имена" name="display_names_check" tool_tip="Показывать экранные имена в чате, IM, тегах имен и пр."/>
	<check_box label="Показать титул группы" name="RenderHideGroupTitle" tool_tip="EПоказать титул своей активной группы" />
	<check_box label="Показать Viewer" name="show_viewerID" tool_tip="Показывает рядом с именем пользователя используемый Viewer" />
	<check_box label="Старый формат" name="FSshow_legacyun" tool_tip="Имя Фамилия в замен имя.фамилия" />
	<check_box label="Показать тэги радара (в работе)" name="FSPublishRadarTag" tool_tip="показать вивер другим на радаре"/>

	<text name="inworld_typing_rg_label">
		Нажатие клавиш с буквами:
	</text>
	<radio_group name="inworld_typing_preference">
		<radio_item label="Начинает локальный чат" name="radio_start_chat"/>
		<radio_item label="Приводит к перемещению (т. е. WASD)" name="radio_move"/>
	</radio_group>
	<text name="title_afk_text" >
		Статус "Отошел" через:
	</text>
	<text name="title_afk_quit_text" left_pad="40">
		Выйти из системы через:
	</text> 
	<combo_box label="Статус 'Отошел' через:" name="afk">
		<combo_box.item label="2 минуты" name="item0"/>
		<combo_box.item label="5 минут" name="item1"/>
		<combo_box.item label="10 минут" name="item2"/>
		<combo_box.item label="30 минут" name="item3"/>
		<combo_box.item label="никогда" name="item4"/>
	</combo_box>
	<combo_box  layout="topleft" left_pad="60" name="quitafk">
		<combo_box.item label="2 минуты" name="item0"/>
		<combo_box.item label="5 минут" name="item1"/>
		<combo_box.item label="10 минут" name="item2"/>
		<combo_box.item label="30 минут" name="item3"/>
		<combo_box.item label="никогда" name="item4"/>
	</combo_box>
	<check_box name="AvatarSitOnAway" label="Сесть, если статус 'Отошел'" />
	<text name="text_box3">
		Сообщение автоответчика (для "Занят" и для автоответчика):
	</text>
	<text_editor name="busy_response">
		log_in_to_change
	</text_editor>

    <panel name="general_extras">
        <text name="text_box3">
           Дополнительно:
        </text>
        <check_box name="FSUseWebProfiles" label="Использование Веб профилей" tool_tip="Открыть профиль в браузере"/>

<!-- This option is duplicated here for ease of locating and to replicate LLv3 -->
        <text name="inworld_typing_rg_label">
           Нажатие букв:
        </text>
        <radio_group name="inworld_typing_preference">
            <radio_item label="Писать в чат" name="radio_start_chat"/>
            <radio_item label="Ходить (WASD)" name="radio_move"/>
        </radio_group>
	</panel>
</panel>
