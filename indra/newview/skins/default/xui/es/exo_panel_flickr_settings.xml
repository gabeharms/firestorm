<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel name="panel_flickr_settings">
	<combo_box label="Resolución" name="flickr_size_combo">
		<combo_box.item label="Ventana actual" name="CurrentWindow"/>
		<combo_box.item label="Personalizado" name="Custom"/>
	</combo_box>
	<layout_stack name="flickr_image_params_ls">
		<layout_panel name="flickr_image_size_lp">
			<spinner label="Ancho" name="flickr_snapshot_width"/>
			<spinner label="Alto" name="flickr_snapshot_height"/>
			<check_box label="Mantener proporciones" name="flickr_keep_aspect_check"/>
		</layout_panel>
		<layout_panel name="flickr_image_format_quality_lp">
			<combo_box control_name="ExodusFlickrSnapshotFormat" label="Formato" name="flickr_format_combo">
				<combo_box.item label="PNG (sin pérdida)" name="PNG"/>
			</combo_box>
			<slider label="Calidad" name="image_quality_slider"/>
		</layout_panel>
	</layout_stack>
</panel>