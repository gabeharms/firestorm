<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="camera_floater">
	<floater.string name="rotate_tooltip">
		Orbitar cámara alrededor de lo enfocado
	</floater.string>
	<floater.string name="zoom_tooltip">
		Hacer zoom hacia lo enfocado
	</floater.string>
	<floater.string name="move_tooltip">
		Mover cámara arriba, abajo, izquierda o derecha
	</floater.string>
	<floater.string name="camera_modes_title">
		Modos de cámara
	</floater.string>
	<floater.string name="pan_mode_title">
		Orbital - Zoom - Panorámica
	</floater.string>
	<floater.string name="presets_mode_title">
		Vistas predefinidas
	</floater.string>
	<floater.string name="free_mode_title">
		Centrar el objeto
	</floater.string>
	<panel name="zoom">
		<layout_stack name="camera_view_layout_stack">
			<layout_panel name="camera_rotate_layout_panel">
				<joystick_rotate name="cam_rotate_stick" tool_tip="La cámara orbita alrededor de lo enfocado"/>
			</layout_panel>
			<layout_panel name="camera_zoom_layout_panel">
				<button name="zoom_plus_btn" tool_tip="Acerca el zoom"/>
				<slider_bar name="zoom_slider" tool_tip="Hace zoom hacia lo enfocado"/>
				<button name="zoom_minus_btn" tool_tip="Aleja el zoom"/>
			</layout_panel>
			<layout_panel name="panel_track">
				<joystick_track name="cam_track_stick" tool_tip="Mueve la cámara arriba, abajo, izquierda o derecha"/>
			</layout_panel>
		</layout_stack>
	</panel>
	<panel name="buttons_view">
		<panel_camera_item name="front_view" tool_tip="Vista frontal"/>
		<panel_camera_item name="group_view" tool_tip="Vista lateral"/>
		<panel_camera_item name="rear_view" tool_tip="Vista posterior"/>
	</panel>
	<panel name="buttons">
		<panel_camera_item name="object_view" tool_tip="Centrar el objeto - Cámara libre"/>
		<panel_camera_item name="mouselook_view" tool_tip="Vista subjetiva"/>
		<panel_camera_item name="reset_view" tool_tip="Restablecer vista"/>
	</panel>
</floater>
