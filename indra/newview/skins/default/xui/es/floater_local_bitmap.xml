<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="local_bitmap_browser_floater" title="Examinador local de imágenes" width="625" min_width="625">
	<scroll_list name="bitmap_list">
		<column name="bitmap_name" label="Nombre"/>
		<column name="bitmap_uuid" label="hidden_id"/>
	</scroll_list>
	<button name="add_btn" label="Añadir"/>
	<button name="del_btn" label="Eliminar"/>
	<button name="upload_btn" label="Subir"/>
	<texture_picker label="Vista previa" name="texture_view"/>
	<check_box label="Autoactualizar como:" name="keep_updating_checkbox" tool_tip="Activa o desactiva la comprobación periódica de si la imagen ha sido actualizada en tu disco duro" width="201"/>
	<combo_box name="type_combobox" left_delta="160">
		<combo_item name="type_texture" value="type_texture"> Textura </combo_item>
		<combo_item name="type_sculptie" value="type_sculptie"> Mapa de escultura </combo_item>
		<combo_item name="type_layer" value="type_layer"> Capa de Avatar </combo_item>
	</combo_box>
	<text name="time_caption_text" width="120" left_delta="-158">
		Última actualizacion:
	</text>
	
	<text name="link_caption_text">
		Enlace:
	</text>
	<text name="time_text" left_delta="121">
		(fecha)
	</text>
	<text name="link_text">
		(estado del enlace)
	</text>
	<text name="uuid_caption_text">
		UUID local:
	</text>
	<line_editor name="uuid_text" width="343"/>
	<text name="path_caption_text">
		Ruta local:
	</text>
	<line_editor name="path_text" width="343"/>
</floater>
