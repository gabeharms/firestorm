<layout_panel name="option_layout_panel">
	<layout_stack name="option_inner_stack">
		<layout_panel name="option_panel_updown">
			<button name="remove_button" tool_tip="Einstellung entfernen"/>
		</layout_panel>
		<layout_panel name="text_panel" width="115">
			<text name="option_label">
				Bezeichnung:
			</text>
		</layout_panel>
		<layout_panel name="option_panel">
			<radio_group name="option_radio_control">
				<radio_item name="on" label="An"/>
				<radio_item name="off" label="Aus"/>
			</radio_group>
		</layout_panel>
	</layout_stack>
</layout_panel>
