<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="Environment Editor Floater" title="Umgebungseinstellungen" width="330">
	<check_box label="Immer Parzellen-/Regionseinstellungen verwenden" name="use_env_from_region_always" tool_tip="Falls aktiv, werden für die Umgebung immer die unten gewählten Einstellungen angewandt."/>
	<radio_group name="region_settings_radio_group">
		<radio_item label="Regionseinstellungen verwenden" name="use_region_settings"/>
		<radio_item label="Meine Umgebung anpassen" name="use_my_settings"/>
	</radio_group>
	<panel name="user_environment_settings">
		<text name="note1" width="305">
			Hinweis: Ihre benutzerdefinierten Einstellungen
		</text>
		<text name="note2">
			sind für andere Benutzer nicht sichtbar.
		</text>
		<view_border name="border" width="300"/>
		<text name="water_settings_title" width="97">
			Wassereinstellung
		</text>
		<combo_box name="water_settings_preset_combo" width="175">
			<combo_box.item label="-Voreinstellung auswählen-" name="item0"/>
		</combo_box>
		<text name="sky_dayc_settings_title">
			Himmel / Tageszyklus
		</text>
		<radio_group name="sky_dayc_settings_radio_group" width="102" left_delta="0">
			<radio_item label="Fester Himmel" name="my_sky_settings"/>
			<radio_item label="Tageszyklus" name="my_dayc_settings"/>
		</radio_group>
		<combo_box name="sky_settings_preset_combo" left_pad="7" width="175">
			<combo_box.item label="-Voreinstellung auswählen-" name="item0"/>
		</combo_box>
		<combo_box name="dayc_settings_preset_combo" width="175">
			<combo_box.item label="-Voreinstellung auswählen-" name="item0"/>
		</combo_box>
	</panel>
	<button label="OK" name="ok_btn" right="-167"/>
	<button label="Abbrechen" name="cancel_btn"/>
</floater>
