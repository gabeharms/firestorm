<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel name="panel_flickr_settings">
	<combo_box label="Auflösung" name="flickr_size_combo">
		<combo_box.item label="Aktuelles Fenster" name="CurrentWindow"/>
		<combo_box.item label="320x240" name="320x240"/>
		<combo_box.item label="640x480" name="640x480"/>
		<combo_box.item label="800x600" name="800x600"/>
		<combo_box.item label="1024x768" name="1024x768"/>
		<combo_box.item label="1280x1024" name="1280x1024"/>
		<combo_box.item label="1600x1200" name="1600x1200"/>
		<combo_box.item label="Benutzerdefiniert" name="Custom"/>
	</combo_box>
	<layout_stack name="flickr_image_params_ls">
		<layout_panel name="flickr_image_size_lp">
			<spinner label="Breite" name="flickr_snapshot_width"/>
			<spinner label="Höhe" name="flickr_snapshot_height"/>
			<check_box label="Seitenverhältnis beibehalten" name="flickr_keep_aspect_check"/>
		</layout_panel>
		<layout_panel name="flickr_image_format_quality_lp">
			<combo_box label="Format" name="flickr_format_combo">
				<combo_box.item label="PNG (verlustfrei)" name="PNG"/>
				<combo_box.item label="JPEG" name="JPEG"/>
			</combo_box>
			<slider label="Bildqualität" name="image_quality_slider" label_width="65" width="165"/>
			<text name="image_quality_level">
				([QLVL])
			</text>
		</layout_panel>
	</layout_stack>
</panel>