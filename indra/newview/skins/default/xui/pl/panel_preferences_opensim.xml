<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel label="Opensim" name="opensim_panel">
	<tab_container label="Opensim" name="tabs">
		<panel label="Zarządzaj siatkami" name="grid_management_panel">
			<text name="add_grid_text">
				Dodaj siatkę
			</text>
			<button label="Czyść" label_selected="Czyść" name="clear_grid" />
			<button label="Dodaj" name="apply_new_grid" />
			<text name="add_grid_text">
				Zarządzaj siatkami
			</text>
			<scroll_list name="grid_list">
				<scroll_list.columns label="Nazwa" name="grid_label" />
				<scroll_list.columns label="URI logowania" name="login_uri" />
			</scroll_list>
			<button label="Odśwież" name="refresh_grid" />
			<button label="Usuń" name="remove_grid" />
			<panel name="advanced_grid_panel">
				<text name="grid_name_text">
					Nazwa siatki:
				</text>
				<text name="grid_uri_text">
					URI siatki:
				</text>
				<text name="login_page_text">
					Strona logowania:
				</text>
				<button label="Zapisz" name="save_grid" />
				<text name="helper_uri_text">
					URI pomocy:
				</text>
				<text name="website_text">
					Strona WWW:
				</text>
				<text name="support_text">
					Wsparcie:
				</text>
				<text name="register_text">
					Rejestracja:
				</text>
				<text name="password_text">
					URI dla haseł:
				</text>
				<text name="search_text">
					Wyszukiwarka:
				</text>
				<text name="message_text">
					URI wiadomości:
				</text>
			</panel>
		</panel>
		<panel label="Różne" name="opensim_misc_panel">
			<check_box label="Włącz ustawienia Lightshare regionu" name="Lightshare" />
			<check_box label="Debuguj szukanie" name="DebugSearch" />
			<text name="search_url_debug_text">
				Nadpisz obecny URL szukania: (puste = bez nadpisywania)
			</text>
			<button label="Czyść" label_selected="Czyść" name="clear_search_url_debug" />
			<button label="Ustaw" name="pick_current_search_url" />
		</panel>
	</tab_container>
</panel>
