<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="ColorPicker" title="Wybierz kolor">
	<tab_container name="scale_type_container">
		<panel name="RGB">
			<text name="r_val_text">
				Czerwony:
			</text>
			<text name="g_val_text">
				Zielony:
			</text>
			<text name="b_val_text">
				Niebieski:
			</text>
		</panel>
		<panel name="LSL">
			<text name="r_val_text_lsl">
				Czerwony:
			</text>
			<text name="g_val_text_lsl">
				Zielony:
			</text>
			<text name="b_val_text_lsl">
				Niebieski:
			</text>
		</panel>
		<panel name="Hex">
			<text name="hex_text">
				Szesnast. (#rrggbb):
			</text>
		</panel>
	</tab_container>
	<text name="h_val_text">
		Odcień:
	</text>
	<text name="s_val_text">
		Nasycenie:
	</text>
	<text name="l_val_text">
		Luminacja:
	</text>
	<check_box label="Stosuj teraz" name="apply_immediate"/>
	<button label="Kopia LSL" tool_tip="Kopiuje wartości koloru do formatu wektora kolorów LSL w postaci &lt;r, g, b&gt;." name="copy_lsl_btn"/>
	<button label="OK" label_selected="OK" name="select_btn"/>
	<button label="Anuluj" label_selected="Anuluj" name="cancel_btn"/>
	<text name="Current color:">
		^ Obecny kolor ^
	</text>
	<text name="(Drag below to save.)">
		(Przeciągnij by zapisać)
	</text>
</floater>
