<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater name="local_bitmap_browser_floater" title="Przeglądarka lokalnych bitmap">
	<scroll_list name="bitmap_list">
		<column name="bitmap_name" label="Nazwa"/>
	</scroll_list>
	<button name="add_btn" label="Dodaj"/>
	<button name="del_btn" label="Usuń"/>
	<button name="upload_btn" label="Załaduj"/>
	<texture_picker label="Podgląd" name="texture_view"/>
	<check_box label="Auto-aktualizuj:" name="keep_updating_checkbox" tool_tip="Włącz lub wyłącz okresowe sprawdzanie, czy bitmapa zmieniła się na Twoim twardym dysku"/>
	<combo_box name="type_combobox">
		<combo_item name="type_texture">Jako teksturę</combo_item>
		<combo_item name="type_sculptie">Jako mapę skulptu</combo_item>
		<combo_item name="type_layer">Jako warstwę awatara</combo_item>
	</combo_box>
	<text  name="time_caption_text">
		Ostat. akt.:
	</text>  
	<text name="link_caption_text">
		Status linka:
	</text>
	<text name="uuid_caption_text">
		Lokalny UUID:
	</text>
	<text name="path_caption_text">
		Lokalna ścieżka:
	</text>
</floater>
