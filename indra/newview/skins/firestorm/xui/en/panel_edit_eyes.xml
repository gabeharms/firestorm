<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
 <panel
     background_visible="true"
	 follows="all"
	 height="400"
	 layout="topleft"
	 left="0"
	 name="edit_eyes_panel"
	 top_pad="10"
	 width="333" >

     <panel
	  border="false"
	  follows="top|left|right"
	  height="80"
	  left="0"
	  layout="topleft"
	  name="avatar_eye_color_panel"
	  top="0"
	  width="333" >
       <texture_picker
             can_apply_immediately="true"
             default_image_name="Default"
             follows="left|top"
             height="80"
             label="Iris"
             layout="topleft"
             left="5"
             name="Iris"
             tool_tip="Click to choose a picture"
             top="5"
             width="64" >
         <texture_picker.commit_callback
             function="TexturePicker.Commit" />
       </texture_picker>
     </panel>

      <!-- Begin Eyes Panel -->
      <panel
       name="eyes_main_tab_holder"
       title="Eyes"
       top_pad="0"
       left="0"
       layout="topleft"
       fit_parent="false"
       follows="all"
       height="320"
       width="333">
      <!-- Viewer demands an accordion here, so we provide one -->
      <accordion
       layout="topleft"
       follows="all"
       height ="320"
       left="0"
       name="eyes_main_accordion"
       top="0"
       single_expansion="true"
       fit_parent="true"
       width="333">
      <accordion_tab
       layout="topleft"
       min_height="150"
       name="eyes_main_tab"
       fit_panel="false"
       title="Eyes">
      <!-- Viewer will replace things here with tiled editing views -->
      <scrolling_panel_list
       layout="topleft"
       follows="all"
       left="0"
       name="eyes_main_param_list"
       top="0"
       height="288"
       width="333" />
      </accordion_tab>
      </accordion>
      </panel>
      <!-- End Eyes Panel -->

<!--    </tab_container>   -->
</panel>
